/* 主题切换组件样式 */

.theme-switcher-container {
  position: fixed;
  top: 100rpx;
  right: 30rpx;
  z-index: 1000;
  opacity: 0;
  transform: translateX(100%);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.theme-switcher-container.visible {
  opacity: 1;
  transform: translateX(0);
}

/* 切换按钮 */
.theme-toggle-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 30rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  border: 1rpx solid rgba(192, 169, 189, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
}

.theme-toggle-btn:hover {
  background: rgba(192, 169, 189, 0.1);
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.theme-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.theme-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #4B5563;
}

/* 主题选项面板 */
.theme-panel {
  position: absolute;
  top: 80rpx;
  right: 0;
  width: 500rpx;
  max-height: 80vh;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  overflow: hidden;
  transform: translateY(-20rpx) scale(0.95);
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  z-index: 1001;
}

.theme-panel.show {
  transform: translateY(0) scale(1);
  opacity: 1;
  visibility: visible;
}

/* 面板头部 */
.panel-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #C0A9BD 0%, #D4C3D1 100%);
  color: white;
  text-align: center;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.panel-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

/* 主题选项 */
.theme-options {
  padding: 24rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.theme-option {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.theme-option:hover {
  background: rgba(192, 169, 189, 0.05);
  transform: translateX(4rpx);
}

.theme-option.active {
  background: rgba(192, 169, 189, 0.1);
  border-color: #C0A9BD;
  transform: translateX(8rpx);
  box-shadow: 0 4rpx 16rpx rgba(192, 169, 189, 0.2);
}

/* 主题预览 */
.theme-preview {
  display: flex;
  margin-right: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-color {
  width: 20rpx;
  height: 40rpx;
  transition: transform 0.3s ease;
}

.theme-option:hover .preview-color {
  transform: scaleY(1.2);
}

/* 主题信息 */
.theme-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.theme-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 4rpx;
  display: block;
}

.theme-desc {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.4;
  display: block;
}

/* 时间主题 */
.time-themes {
  padding: 0 24rpx 24rpx;
}

.section-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #E5E7EB, transparent);
  margin: 24rpx 0;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #4B5563;
  margin-bottom: 16rpx;
  display: block;
}

.time-options {
  display: flex;
  gap: 12rpx;
  justify-content: space-between;
}

.time-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  cursor: pointer;
}

.time-option:hover {
  border-color: #C0A9BD;
  background: rgba(192, 169, 189, 0.05);
  transform: translateY(-2rpx);
}

.time-option.active {
  border-color: #FF6B35;
  background: rgba(255, 107, 53, 0.1);
  transform: translateY(-2rpx);
}

.time-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  display: block;
}

.time-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #4B5563;
  display: block;
}

/* 智能推荐 */
.smart-recommendation {
  margin: 16rpx 24rpx 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 53, 0.2);
}

.recommendation-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.recommendation-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #EA580C;
}

.recommendation-text {
  font-size: 24rpx;
  color: #9A3412;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: block;
}

.btn-recommendation {
  width: 100%;
  background: linear-gradient(135deg, #FF6B35, #EA580C);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-recommendation:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
}

/* 背景遮罩 */
.theme-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(4px);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 999;
}

.theme-overlay.show {
  opacity: 1;
  visibility: visible;
}

/* 响应式适配 */
@media (max-width: 600px) {
  .theme-panel {
    width: calc(100vw - 60rpx);
    right: -200rpx;
  }
  
  .time-options {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .time-option {
    flex-direction: row;
    justify-content: flex-start;
  }
  
  .time-icon {
    margin-bottom: 0;
    margin-right: 12rpx;
  }
}
