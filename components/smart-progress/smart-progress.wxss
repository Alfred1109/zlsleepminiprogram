.smart-progress {
  padding: 20px;
  transition: all 0.3s ease;
}

.smart-progress.show {
  opacity: 1;
  transform: translateY(0);
}

.smart-progress.hide {
  opacity: 0;
  transform: translateY(20px);
}

/* çº¿æ€§è¿›åº¦æ¡æ ·å¼ */
.progress-container {
  width: 100%;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.phase-text {
  font-size: 16px;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.percent-text {
  font-size: 14px;
  color: #666;
  font-weight: 600;
  min-width: 40px;
  text-align: right;
}

.progress-track {
  width: 100%;
  height: 8px;
  background-color: #F0F0F0;
  border-radius: 4px;
  overflow: hidden;
  position: relative;
}

.progress-bar {
  height: 100%;
  border-radius: 4px;
  position: relative;
  transition: width 0.3s ease, background-color 0.3s ease;
  overflow: hidden;
}

.progress-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.6), transparent);
  animation: shine 2s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* æ­¥éª¤æŒ‡ç¤ºå™¨ */
.step-indicators {
  display: flex;
  justify-content: space-between;
  margin-top: 16px;
  padding: 0 4px;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  max-width: 80px;
}

.step-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: #E5E5E5;
  margin-bottom: 8px;
  transition: background-color 0.3s ease;
}

.step-item.active .step-dot {
  background-color: #4F98F7;
}

.step-name {
  font-size: 12px;
  color: #999;
  text-align: center;
  line-height: 1.2;
}

.step-item.active .step-name {
  color: #4F98F7;
  font-weight: 500;
}

/* åœ†å½¢è¿›åº¦æ¡æ ·å¼ */
.circle-progress-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.circle-progress {
  position: relative;
  width: 120px;
  height: 120px;
}

.progress-svg {
  position: absolute;
  top: 0;
  left: 0;
  transform: rotate(-90deg);
}

.progress-circle {
  transition: stroke-dashoffset 0.5s ease, stroke 0.3s ease;
}

.circle-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.circle-percent {
  display: block;
  font-size: 24px;
  font-weight: 600;
  color: #333;
  line-height: 1;
}

.circle-phase {
  display: block;
  font-size: 12px;
  color: #666;
  margin-top: 4px;
  line-height: 1.2;
}

