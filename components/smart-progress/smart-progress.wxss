.steps-progress-container {
  width: 100%;
}

.steps-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.steps-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.steps-counter {
  font-size: 14px;
  color: #666;
  background-color: #F5F5F5;
  padding: 4px 8px;
  border-radius: 12px;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.step-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.step-item.completed {
  background-color: #F0F9FF;
  border: 1px solid #E0F2FE;
}

.step-item.active {
  background-color: #FFF7ED;
  border: 1px solid #FED7AA;
}

.step-item.pending {
  background-color: #F9F9F9;
  border: 1px solid #E5E5E5;
}

.step-icon {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: 600;
  flex-shrink: 0;
}

.step-item.completed .step-icon {
  background-color: #10B981;
  color: white;
}

.step-item.active .step-icon {
  background-color: #F59E0B;
  color: white;
}

.step-item.pending .step-icon {
  background-color: #D1D5DB;
  color: #6B7280;
}

.step-content {
  flex: 1;
}

.step-title {
  display: block;
  font-size: 16px;
  font-weight: 500;
  line-height: 1.3;
}

.step-item.completed .step-title {
  color: #059669;
}

.step-item.active .step-title {
  color: #D97706;
}

.step-item.pending .step-title {
  color: #6B7280;
}

.step-progress {
  display: block;
  font-size: 12px;
  color: #F59E0B;
  margin-top: 2px;
}

/* åŠ¨æ€ç²’å­æ•ˆæœ */
.particles-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background-color: #4F98F7;
  border-radius: 50%;
  opacity: 0.6;
}

.particle-1 {
  top: 20%;
  left: 10%;
  animation: float1 3s infinite ease-in-out;
}

.particle-2 {
  top: 60%;
  right: 15%;
  animation: float2 4s infinite ease-in-out;
}

.particle-3 {
  bottom: 30%;
  left: 70%;
  animation: float3 3.5s infinite ease-in-out;
}

@keyframes float1 {
  0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.3; }
  50% { transform: translateY(-20px) translateX(10px); opacity: 0.8; }
}

@keyframes float2 {
  0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.4; }
  50% { transform: translateY(15px) translateX(-15px); opacity: 0.9; }
}

@keyframes float3 {
  0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.5; }
  50% { transform: translateY(-10px) translateX(20px); opacity: 0.7; }
}

