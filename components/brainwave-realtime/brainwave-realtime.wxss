/* components/brainwave-realtime/brainwave-realtime.wxss */
/* 实时脑波可视化组件样式 */

.brainwave-realtime-container {
  position: relative;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0.1) 100%);
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.brainwave-realtime-container.playing {
  box-shadow: 0 4rpx 20rpx rgba(93, 158, 126, 0.3);
  transform: translateY(-2rpx);
}

.brainwave-canvas {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* 脑波信息显示 */
.brainwave-info {
  position: absolute;
  top: 12rpx;
  left: 16rpx;
  display: flex;
  flex-direction: column;
  pointer-events: none;
  z-index: 2;
}

.brainwave-name {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4rpx;
}

.brainwave-freq {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  font-family: 'Monaco', 'Consolas', monospace;
}

/* 状态指示器 */
.status-indicator {
  position: absolute;
  top: 12rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  pointer-events: none;
  z-index: 2;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  transition: all 0.3s ease;
}

.status-indicator.active .status-dot {
  background: #4CAF50;
  box-shadow: 0 0 10rpx rgba(76, 175, 80, 0.6);
  animation: pulse 2s infinite;
}

.status-indicator.inactive .status-dot {
  background: rgba(255, 255, 255, 0.4);
}

.status-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 不同脑波类型的主题色 */
.brainwave-realtime-container.delta {
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(74, 144, 226, 0.2) 100%);
}

.brainwave-realtime-container.theta {
  background: linear-gradient(135deg, rgba(93, 158, 126, 0.1) 0%, rgba(93, 158, 126, 0.2) 100%);
}

.brainwave-realtime-container.alpha {
  background: linear-gradient(135deg, rgba(245, 166, 35, 0.1) 0%, rgba(245, 166, 35, 0.2) 100%);
}

.brainwave-realtime-container.beta {
  background: linear-gradient(135deg, rgba(208, 2, 27, 0.1) 0%, rgba(208, 2, 27, 0.2) 100%);
}

/* 脉动动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 播放状态下的容器动画 */
.brainwave-realtime-container.playing::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .brainwave-name {
    font-size: 22rpx;
  }
  
  .brainwave-freq {
    font-size: 18rpx;
  }
  
  .status-text {
    font-size: 18rpx;
  }
}
