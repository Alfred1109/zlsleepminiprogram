/* components/realtime-waveform/realtime-waveform.wxss */
/* 实时音频波形分析组件样式 */

.realtime-waveform-container {
  position: relative;
  width: 100%;
  height: 100%;
  background: transparent;
  overflow: hidden;
}

.waveform-canvas {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  transition: opacity 0.3s ease;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.waveform-canvas.playing {
  opacity: 1;
}

.waveform-canvas.paused {
  opacity: 0.7;
}

.waveform-status {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.6);
  color: #FFFFFF;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  pointer-events: none;
  z-index: 2;
}

/* 分析模式指示器样式已移除，不再需要显示模式文字 */

.status-text {
  color: rgba(255, 255, 255, 0.9);
}

/* 不同主题的容器样式 */
.realtime-waveform-container.healing {
  background: linear-gradient(135deg, rgba(93, 158, 126, 0.1) 0%, rgba(123, 179, 160, 0.1) 100%);
}

.realtime-waveform-container.energetic {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(78, 205, 196, 0.1) 100%);
}

.realtime-waveform-container.calm {
  background: linear-gradient(135deg, rgba(168, 230, 207, 0.1) 0%, rgba(136, 216, 192, 0.1) 100%);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .waveform-status {
    font-size: 22rpx;
    padding: 10rpx 20rpx;
  }
}
