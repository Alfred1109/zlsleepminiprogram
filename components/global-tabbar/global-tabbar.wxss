/* 全局底部菜单栏组件样式 */
.global-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tabbar-container {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx 0 20rpx;
  min-height: 120rpx;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 8rpx 0;
  transition: all 0.3s ease;
  position: relative;
}

.tabbar-item:active {
  transform: scale(0.95);
}

.tabbar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.tabbar-text {
  font-size: 20rpx;
  color: #666666;
  font-weight: 500;
  line-height: 1.2;
  transition: all 0.3s ease;
  text-align: center;
}

/* 激活状态 */
.tabbar-item.active .tabbar-text {
  color: #4A90E2;
  font-weight: 600;
}

.tabbar-item.active .tabbar-icon {
  transform: scale(1.1);
}

/* 激活状态的底部指示器 */
.tabbar-item.active::before {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 6rpx;
  background: #4A90E2;
  border-radius: 3rpx;
  animation: tabbarIndicator 0.3s ease;
}

@keyframes tabbarIndicator {
  0% {
    width: 0;
    opacity: 0;
  }
  100% {
    width: 32rpx;
    opacity: 1;
  }
}

/* 深色主题适配 */
.global-tabbar.dark-mode {
  background: rgba(30, 30, 30, 0.95);
  border-top-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.dark-mode .tabbar-text {
  color: #CCCCCC;
}

.dark-mode .tabbar-item.active .tabbar-text {
  color: #4A90E2;
}

/* 平静模式适配 */
.global-tabbar.calm-mode {
  background: rgba(240, 253, 250, 0.95);
  border-top-color: rgba(6, 78, 59, 0.1);
}

.calm-mode .tabbar-text {
  color: #047857;
}

.calm-mode .tabbar-item.active .tabbar-text {
  color: #059669;
}

.calm-mode .tabbar-item.active::before {
  background: #059669;
}

/* 专注模式适配 */
.global-tabbar.focus-mode {
  background: rgba(254, 249, 195, 0.95);
  border-top-color: rgba(146, 64, 14, 0.1);
}

.focus-mode .tabbar-text {
  color: #92400E;
}

.focus-mode .tabbar-item.active .tabbar-text {
  color: #B45309;
}

.focus-mode .tabbar-item.active::before {
  background: #B45309;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .tabbar-icon {
    width: 44rpx;
    height: 44rpx;
  }
  
  .tabbar-text {
    font-size: 18rpx;
  }
  
  .tabbar-container {
    min-height: 100rpx;
    padding: 12rpx 0 16rpx;
  }
}

/* 确保页面内容不被底部菜单栏遮挡 */
.page-with-tabbar {
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}
