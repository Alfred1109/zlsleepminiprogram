/* ======================================== */

/* ========================================
   CSS 重置与全局设置
   ======================================== */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
  font-size: 28rpx;
  line-height: 1.6;
  color: #64766A; /* text-primary */
  background-color: #F4F2F3; /* bg-secondary */
  box-sizing: border-box;
}

/* 小程序不支持标签选择器，改为通用类 */
.box-border {
  box-sizing: border-box;
}

/* ========================================
   设计系统：原子类
   ======================================== */

/* ========================================
   色彩系统 - 基于色彩学和疗愈心理学优化
   ======================================== */

/* 主色系 - 紫粉色 (疗愈、冥想、高贵) */
/*
  --purple-50: #FAF7F9;        极浅紫 - 卡片背景
  --purple-100: #F0E8ED;       浅紫 - 区块背景
  --purple-200: #E1D1D9;       浅中紫 - 边框
  --purple-300: #D4C3D1;       中浅紫 - 当前浅色
  --purple-500: #C0A9BD;       主紫色 - 主题色
  --purple-600: #A89AAA;       中深紫 - 悬停状态
  --purple-700: #8B7E8F;       深紫 - 活跃状态
  --purple-900: #5D5162;       极深紫 - 强调文字
*/

/* 品牌色系 - 橙色 (活力、温暖、专业可信) */
/*
  --orange-50: #FFF7ED;        极浅橙 - 提示背景
  --orange-100: #FFEDD5;       浅橙 - 高亮背景
  --orange-200: #FED7AA;       中浅橙 - 装饰元素
  --orange-400: #FB923C;       中橙 - 交互状态
  --orange-500: #FF6B35;       主橙色 - 品牌主色
  --orange-600: #E5602F;       中深橙 - 深层交互
  --orange-700: #C2410C;       深橙 - 强调状态
*/

/* 功能色系 - 语义化配色 */
/*
  --success: #059669;          成功绿 - 完成状态
  --warning: #D97706;          警告橙 - 注意事项
  --error: #DC2626;            错误红 - 异常状态
  --info: #2563EB;             信息蓝 - 提示内容
*/

/* 中性色系 - 文字和背景 */
/*
  --gray-50: #F9FAFB;          极浅灰 - 背景
  --gray-100: #F3F4F6;         浅灰 - 卡片背景
  --gray-200: #E5E7EB;         中浅灰 - 边框
  --gray-400: #9CA3AF;         中灰 - 占位文字
  --gray-600: #4B5563;         中深灰 - 次要文字
  --gray-800: #1F2937;         深灰 - 主要文字
  --gray-900: #111827;         极深灰 - 标题文字
*/

/* 1. 间距 (统一 8rpx 缩放) */
/* margin-all */
.m-1 { margin: 8rpx; }
.m-2 { margin: 16rpx; }
.m-3 { margin: 24rpx; }
.m-4 { margin: 32rpx; }
.m-5 { margin: 40rpx; }

/* margin-top */
.mt-1 { margin-top: 8rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-3 { margin-top: 24rpx; }
.mt-4 { margin-top: 32rpx; }
.mt-5 { margin-top: 40rpx; }

/* margin-bottom */
.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-5 { margin-bottom: 40rpx; }

/* padding-all */
.p-1 { padding: 8rpx; }
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }

/* padding-x-axis */
.px-1 { padding-left: 8rpx; padding-right: 8rpx; }
.px-2 { padding-left: 16rpx; padding-right: 16rpx; }
.px-3 { padding-left: 24rpx; padding-right: 24rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }

/* padding-y-axis */
.py-1 { padding-top: 8rpx; padding-bottom: 8rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-3 { padding-top: 24rpx; padding-bottom: 24rpx; }
.py-4 { padding-top: 32rpx; padding-bottom: 32rpx; }


/* 2. 颜色 - 品牌配色体系 */
/* 基于色彩学优化的文字配色 */
.text-primary { color: #1F2937; } /* 主标题 - 高对比度深灰 */
.text-secondary { color: #4B5563; } /* 正文 - 改善对比度 */
.text-muted { color: #6B7280; } /* 辅助文字 - 优化可读性 */
.text-placeholder { color: #9CA3AF; } /* 占位文字 - 标准中性色 */
.text-white { color: #FFFFFF; }
.text-brand { color: #FF6B35; } /* 品牌橙色 - logo主色 */
.text-brand-light { color: #FF8B5A; } /* 浅橙色 */
.text-brand-dark { color: #E5602F; } /* 深橙色 */
.text-theme { color: #C0A9BD; } /* 主强调色 */
.text-healing { color: #7DD3C0; } /* 治愈绿色 */
.text-nature { color: #85B797; } /* 自然绿色 */
/* 扩展色彩类 - 基于色彩层次体系 */
.text-purple-light { color: #D4C3D1; }
.text-purple { color: #C0A9BD; }
.text-purple-dark { color: #8B7E8F; }

/* 语义化功能色彩 */
.text-success { color: #059669; } /* 成功状态 */
.text-warning { color: #D97706; } /* 警告状态 */
.text-error { color: #DC2626; } /* 错误状态 */
.text-info { color: #2563EB; } /* 信息提示 */

.bg-white { background-color: #FFFFFF; }
.bg-primary { background-color: #F4F2F3; } /* 主背景 */
.bg-secondary { background-color: #F8F6F7; } /* 次级背景 */
.bg-brand { background-color: #FF6B35; } /* 品牌橙色 */
.bg-brand-light { background-color: #FF8B5A; } /* 浅橙色背景 */
.bg-brand-dark { background-color: #E5602F; } /* 深橙色背景 */
.bg-brand-pale { background-color: #FFF4F0; } /* 极浅橙色背景 */
.bg-brand-soft { background-color: rgba(255, 107, 53, 0.1); } /* 半透明橙色背景 */
.bg-brand-hover { background-color: rgba(255, 107, 53, 0.05); } /* 悬停效果橙色 */
.bg-theme { background-color: #C0A9BD; } /* 主强调色 */
.bg-theme-secondary { background-color: #94A7AE; } /* 次要强调色 */
.bg-healing { background-color: #7DD3C0; } /* 治愈绿色 */
.bg-nature { background-color: #85B797; } /* 自然绿色 */
/* 扩展背景色系 */
.bg-purple-50 { background-color: #FAF7F9; } /* 极浅紫背景 */
.bg-purple-100 { background-color: #F0E8ED; } /* 浅紫背景 */
.bg-purple-200 { background-color: #E1D1D9; } /* 中浅紫背景 */
.bg-theme-light { background-color: #F0E8ED; }

/* 橙色系完整背景 */
.bg-orange-50 { background-color: #FFF7ED; } /* 极浅橙背景 */
.bg-orange-100 { background-color: #FFEDD5; } /* 浅橙背景 */
.bg-orange-200 { background-color: #FED7AA; } /* 中浅橙背景 */

/* 功能性背景色 */
.bg-success { background-color: #059669; }
.bg-success-light { background-color: rgba(5, 150, 105, 0.1); }
.bg-warning { background-color: #D97706; }
.bg-warning-light { background-color: rgba(217, 119, 6, 0.1); }
.bg-error { background-color: #DC2626; }
.bg-error-light { background-color: rgba(220, 38, 38, 0.1); }
.bg-info { background-color: #2563EB; }
.bg-info-light { background-color: rgba(37, 99, 235, 0.1); }

/* 3. Flex 布局 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-1 { flex: 1; }

/* 4. 圆角 & 阴影 */
.rounded-sm { border-radius: 8rpx; }
.rounded-md { border-radius: 12rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 20rpx; }
.rounded-full { border-radius: 9999rpx; }

.shadow-sm { box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05); }
.shadow-md { box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); }
.shadow-lg { box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1); }

/* ========================================
   通用组件样式
   ======================================== */

/* 1. 容器 */
.container {
  min-height: 100vh;
  padding: 24rpx;
  background-color: #F4F2F3; /* 使用主背景色 */
}

.container-theme {
  background-color: #C0A9BD;
}

/* 2. 按钮 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 9999rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all 0.2s ease;
}
.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-primary {
  background-color: #C0A9BD; /* 主强调色 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(192, 169, 189, 0.3);
}

.btn-brand {
  background-color: #FF6B35; /* 品牌橙色按钮 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.btn-brand-light {
  background-color: #FF8B5A; /* 浅橙色按钮 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 139, 90, 0.3);
}

.btn-brand-dark {
  background-color: #E5602F; /* 深橙色按钮 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(229, 96, 47, 0.3);
}

.btn-brand-outline {
  background-color: transparent;
  color: #FF6B35;
  border: 2rpx solid #FF6B35;
  box-shadow: none;
}

.btn-healing {
  background-color: #7DD3C0; /* 治愈绿色按钮 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(125, 211, 192, 0.3);
}

.btn-nature {
  background-color: #85B797; /* 自然绿色按钮 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(133, 183, 151, 0.3);
}

.btn-secondary {
  background-color: #F0E8ED;
  color: #C0A9BD;
}

.btn-block {
  width: 100%;
}

/* 3. 卡片 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 4. 列表 */
.list {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  transition: background-color 0.2s ease;
}
.list-item:last-child {
  border-bottom: none;
}
.list-item:active {
  background-color: #f8f8f8;
}

/* 5. 表单 */
.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #FFFFFF;
}

/* ========================================
   页面级模块
   ======================================== */

/* 1. 页面头部 */
.page-header {
  padding: 40rpx 24rpx;
  margin: -24rpx -24rpx 32rpx -24rpx;
  text-align: center;
  background: #C0A9BD;
}
.page-header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
}
.page-header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 12rpx;
}

/* 2. 内容区块 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 3. 固定底部 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx 40rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

/* ========================================
   动画
   ======================================== */

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
