/* ========================================
   CSS 重置与全局设置
   ======================================== */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
  font-size: 28rpx;
  line-height: 1.6;
  color: #1F2937; /* text-primary */
  background-color: #F9FAFB; /* bg-secondary */
  box-sizing: border-box;
}

view, text, button, input {
  box-sizing: border-box;
}

/* ========================================
   设计系统：原子类
   ======================================== */

/* 颜色参考 (注释)
  --primary-color: #2BBAA5;
  --primary-light: #4DCAB4;
  --secondary-color: #93D3AE;
  --text-primary: #1F2937;
  --text-secondary: #6B7280;
  --bg-primary: #FFFFFF;
  --bg-secondary: #F9FAFB;
  --border-light: #E5E7EB;
*/

/* 1. 间距 (统一 8rpx 缩放) */
/* margin-all */
.m-1 { margin: 8rpx; }
.m-2 { margin: 16rpx; }
.m-3 { margin: 24rpx; }
.m-4 { margin: 32rpx; }
.m-5 { margin: 40rpx; }

/* margin-top */
.mt-1 { margin-top: 8rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-3 { margin-top: 24rpx; }
.mt-4 { margin-top: 32rpx; }
.mt-5 { margin-top: 40rpx; }

/* margin-bottom */
.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-5 { margin-bottom: 40rpx; }

/* padding-all */
.p-1 { padding: 8rpx; }
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }

/* padding-x-axis */
.px-1 { padding-left: 8rpx; padding-right: 8rpx; }
.px-2 { padding-left: 16rpx; padding-right: 16rpx; }
.px-3 { padding-left: 24rpx; padding-right: 24rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }

/* padding-y-axis */
.py-1 { padding-top: 8rpx; padding-bottom: 8rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-3 { padding-top: 24rpx; padding-bottom: 24rpx; }
.py-4 { padding-top: 32rpx; padding-bottom: 32rpx; }


/* 2. 颜色 */
.text-primary { color: #1F2937; }
.text-secondary { color: #6B7280; }
.text-muted { color: #9CA3AF; }
.text-white { color: #FFFFFF; }
.text-theme { color: #2BBAA5; }
.text-error { color: #EF4444; }

.bg-white { background-color: #FFFFFF; }
.bg-secondary { background-color: #F9FAFB; }
.bg-theme { background-color: #2BBAA5; }
.bg-theme-light { background-color: #E8F6F3; }

/* 3. Flex 布局 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-1 { flex: 1; }

/* 4. 圆角 & 阴影 */
.rounded-sm { border-radius: 8rpx; }
.rounded-md { border-radius: 12rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 20rpx; }
.rounded-full { border-radius: 9999rpx; }

.shadow-sm { box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05); }
.shadow-md { box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); }
.shadow-lg { box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1); }

/* ========================================
   通用组件样式
   ======================================== */

/* 1. 容器 */
.container {
  min-height: 100vh;
  padding: 24rpx;
  background-color: #F9FAFB;
}

.container-theme {
  background: linear-gradient(135deg, #2BBAA5 0%, #93D3AE 100%);
}

/* 2. 按钮 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 9999rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all 0.2s ease;
}
.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-primary {
  background-color: #2BBAA5;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(43, 186, 165, 0.3);
}

.btn-secondary {
  background-color: #E8F6F3;
  color: #2BBAA5;
}

.btn-block {
  width: 100%;
}

/* 3. 卡片 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 4. 列表 */
.list {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  transition: background-color 0.2s ease;
}
.list-item:last-child {
  border-bottom: none;
}
.list-item:active {
  background-color: #f8f8f8;
}

/* 5. 表单 */
.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #FFFFFF;
}

/* ========================================
   页面级模块
   ======================================== */

/* 1. 页面头部 */
.page-header {
  padding: 40rpx 24rpx;
  margin: -24rpx -24rpx 32rpx -24rpx;
  text-align: center;
  background: #2BBAA5;
}
.page-header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
}
.page-header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 12rpx;
}

/* 2. 内容区块 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 3. 固定底部 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx 40rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

/* ========================================
   动画
   ======================================== */

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
