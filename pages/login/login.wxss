/* pages/login/login.wxss */
/* 登录页面样式 */
/* 全局样式通过 app.wxss 导入，无需重复导入 */

.container {
  min-height: 1334rpx;
  background: linear-gradient(135deg, #F9FAFB 0%, #F3F4F6 100%); /* 使用新的背景渐变 */
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.container::before { content: none; }

/* 顶部区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1F2937; /* 优化后的主文字色 */
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 26rpx;
  color: #4B5563; /* 优化后的次要文字色 */
  line-height: 1.5;
}

/* 登录方式切换 */
.login-methods {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto 40rpx;
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.9); /* 半透明白色 */
  backdrop-filter: blur(10px);
  border-radius: 60rpx;
  padding: 10rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.method-item {
  flex: 1;
  height: 92rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  /* gap: 10rpx; removed for compatibility */
  padding: 0 16rpx;
  border-radius: 46rpx;
  transition: background 180ms ease, transform 180ms ease, box-shadow 180ms ease;
}

.method-item.active {
  background: #ffffff;
  color: #C0A9BD; /* 用主色强调 */
  box-shadow: 0 10rpx 22rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
  border: 1rpx solid #C0A9BD;
}

.method-item.active .method-icon {
  filter: brightness(0) saturate(100%) invert(55%) sepia(76%) saturate(2067%) hue-rotate(360deg) brightness(103%) contrast(101%); /* 橙色滤镜 */
}

.method-icon { width: 34rpx; height: 34rpx; }

.method-name { font-size: 24rpx; font-weight: 600; color: inherit; }

.method-item .method-name { color: #5A6B5F; font-weight: 500; }
.method-item.active .method-name { color: #C0A9BD; font-weight: 600; }

/* 登录表单 */

.form-description {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-description text { display: block; font-size: 26rpx; color: #666666; line-height: 1.5; }

.form-description text:first-child {
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

/* 智能微信登录样式 */
.main-desc { font-size: 32rpx !important; font-weight: 700 !important; margin-bottom: 16rpx !important; color: #2c3e50 !important; }

.sub-desc { font-size: 24rpx !important; margin-bottom: 12rpx !important; color: #7f8c8d !important; }

.wechat-tip {
  font-size: 20rpx !important;
  color: #27ae60 !important;
  margin-top: 8rpx !important;
  padding: 6rpx 12rpx;
  background: #e8f5e8;
  border-radius: 12rpx;
  display: inline-block;
}

/* 智能登录按钮 */
.wechat-btn { 
  background: #C0A9BD !important; /* 使用主色 */
  color: #FFFFFF !important; /* 白色文字 */
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12), 0 2rpx 8rpx rgba(0, 0, 0, 0.1) !important;
  transform: translateY(0); 
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) !important;
  position: relative;
  overflow: hidden;
}

/* 添加微妙的光效 */
.wechat-btn::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
  transform: rotate(45deg) translate(-100%, -100%);
  transition: transform 0.6s ease;
}

.wechat-btn:active::after {
  transform: rotate(45deg) translate(0, 0);
}

.wechat-btn:active { transform: translateY(2rpx); box-shadow: 0 3rpx 12rpx rgba(43, 186, 165, 0.4); }

/* 智能登录提示 */
.smart-login-tips {
  margin-top: 24rpx;
  padding: 16rpx;
  background: rgba(147, 211, 174, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #C0A9BD;
}

.tip-item {
  display: block !important;
  font-size: 20rpx !important;
  color: #6c757d !important;
  line-height: 1.6 !important;
  margin-bottom: 6rpx !important;
  padding-left: 4rpx;
}

.tip-item:last-child {
  margin-bottom: 0 !important;
}

/* 开发环境提示 */
.dev-notice {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.dev-notice-text {
  display: block;
  font-size: 24rpx;
  color: #856404;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.dev-notice-detail {
  display: block;
  font-size: 22rpx;
  color: #856404;
}

/* 表单组 */
.form-group {
  margin-bottom: 30rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(8px);
  border-radius: 50rpx;
  padding: 0 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06), inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #C0A9BD;
  background: #ffffff;
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.form-input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
  border: none;
}

.toggle-password {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  margin-left: 16rpx;
}

/* 按钮样式 */
.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  /* gap: 16rpx; removed for compatibility */
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
}

.login-btn.primary {
  background: #C0A9BD; /* 主色纯色 */
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.login-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #666666;
  border: 1rpx solid #e0e0e0;
}

.login-btn:disabled {
  opacity: 0.6;
}

.login-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 表单链接 */
.form-links {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.link-text {
  font-size: 24rpx;
  color: #C0A9BD;
  text-decoration: underline;
}



/* 服务条款 */
.terms {
  margin-bottom: 40rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.terms-item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 16rpx;
  width: auto;
  text-align: left;
}

.terms-item:last-child {
  margin-bottom: 0;
}

.terms-checkbox {
  transform: scale(1.2);
  margin-right: 12rpx;
  flex-shrink: 0;
  margin-top: 0;
}

.terms-text-wrapper {
  flex: 1;
  text-align: left;
}

.terms-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  display: block;
  text-align: left;
}

.terms-link {
  color: #ffffff;
  text-decoration: underline;
  font-weight: bold;
  padding: 4rpx 8rpx;
  margin: 0 4rpx;
  border-radius: 4rpx;
  background: rgba(255, 255, 255, 0.1);
  display: inline-block;
  transition: all 0.3s ease;
}

.terms-link:active {
  opacity: 0.7;
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

/* 底部信息 */
.footer {
  text-align: center;
  margin-top: auto;
  padding-top: 40rpx;
}

.footer-text {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
}
