/* pages/scene/detail/detail.wxss */
.container {
  padding: 24rpx 24rpx 200rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  min-height: 100vh;
  position: relative;
  transition: background 0.3s ease;
}

/* 添加背景纹理 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 20% 20%, rgba(192, 169, 189, 0.03) 0%, transparent 50%),
                    radial-gradient(circle at 80% 80%, rgba(148, 167, 174, 0.03) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

/* 场景头部信息 - 使用主题背景，支持动态切换 */
.scene-header {
  margin-bottom: 32rpx;
  padding: 40rpx 32rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  transition: background 0.3s ease;
}

.scene-title-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.scene-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #2D3A36;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.scene-subtitle {
  font-size: 24rpx;
  color: #5A6B5F;
  opacity: 0.8;
  font-weight: 500;
}

/* 登录提示卡片 */
.login-prompt {
  margin-bottom: 32rpx;
}

.prompt-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.prompt-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  opacity: 0.8;
}

.prompt-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.prompt-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
}

.prompt-desc {
  font-size: 24rpx;
  color: #5A6B5F;
  opacity: 0.8;
  line-height: 1.4;
}

.prompt-action {
  margin-left: 20rpx;
}

.login-btn {
  padding: 16rpx 32rpx;
  background: #C0A9BD;
  color: #FFFFFF;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(192, 169, 189, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(192, 169, 189, 0.4);
}

/* 功能模块卡片 - 使用主题背景，支持动态切换 */
.section-card {
  margin-bottom: 32rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: background 0.3s ease;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3A36;
}

.section-action {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.95);
  color: #2D3A36;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(8px);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.section-action:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.section-body {
  padding: 0 32rpx 32rpx;
}

/* 专业评测模块特殊样式 - 使用主题颜色，支持动态切换 */
.assessment-section .section-header {
  /* 边框颜色由主题系统控制 */
  transition: border-bottom-color 0.3s ease;
}

.assessment-section .section-action {
  /* 背景和颜色由主题系统控制，移除硬编码颜色 */
  transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
}

/* AI生成脑波模块特殊样式 - 使用主题颜色，支持动态切换 */
.brainwave-section .section-header {
  /* 边框颜色由主题系统控制 */
  transition: border-bottom-color 0.3s ease;
}

.brainwave-section .section-action {
  /* 背景和颜色由主题系统控制，移除硬编码颜色 */
  transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 24rpx;
  color: #94A7AE;
  opacity: 0.8;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 24rpx;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  background: rgba(0, 0, 0, 0.04);
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #2D3A36;
}

.history-date {
  font-size: 22rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.history-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.history-type {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.type-60s {
  background: rgba(192, 169, 189, 0.2);
  color: #C0A9BD;
}

.type-long {
  background: rgba(148, 167, 174, 0.2);
  color: #94A7AE;
}

.history-action {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
}

.history-action:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.9);
}

.action-text {
  font-size: 22rpx;
  color: #64766A;
  font-weight: 600;
}

.play-action {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.play-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #64766A;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 22rpx;
  color: #94A7AE;
  opacity: 0.8;
  text-align: center;
  line-height: 1.4;
}

/* 使用提示 */
.usage-tip {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  margin: 40rpx 0;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.tip-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
}

.tip-desc {
  font-size: 24rpx;
  color: #5A6B5F;
  line-height: 1.4;
  opacity: 0.8;
}

/* ==================== 场景指示器样式 ==================== */
.scene-indicator {
  margin: 0 0 32rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  overflow: hidden;
  transition: background 0.3s ease;
}

.scene-indicator-content {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
}

.scene-indicator-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.scene-indicator-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.scene-indicator-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
  line-height: 1.3;
}

.scene-indicator-subtitle {
  font-size: 24rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.scene-indicator-action {
  padding: 12rpx 20rpx;
  /* 背景和边框由主题系统控制，移除硬编码颜色 */
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.scene-indicator-action:active {
  transform: scale(0.95);
  /* 背景由主题系统控制，移除硬编码颜色 */
}

.exit-text {
  font-size: 24rpx;
  /* 颜色由主题系统控制，移除硬编码颜色 */
  font-weight: 500;
  transition: color 0.3s ease;
}
