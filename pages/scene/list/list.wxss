/* pages/scene/list/list.wxss */
.container {
  padding: 24rpx 24rpx 200rpx;
  background-color: #F4F2F3;
  min-height: 100vh;
  position: relative;
}

/* 添加背景纹理 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 20% 20%, rgba(192, 169, 189, 0.03) 0%, transparent 50%),
                    radial-gradient(circle at 80% 80%, rgba(148, 167, 174, 0.03) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

/* 页面头部 */
.page-header {
  margin-bottom: 40rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #2D3A36;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.page-subtitle {
  font-size: 24rpx;
  color: #5A6B5F;
  opacity: 0.8;
  font-weight: 500;
}

/* 场景列表 */
.scene-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 32rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.loading-text {
  font-size: 28rpx;
  color: #5A6B5F;
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #2D3A36;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #5A6B5F;
  opacity: 0.8;
}

.scene-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.scene-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.scene-icon-container {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.scene-icon {
  font-size: 44rpx;
}

.scene-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.scene-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3A36;
  line-height: 1.2;
}

.scene-description {
  font-size: 24rpx;
  color: #5A6B5F;
  opacity: 0.8;
  line-height: 1.4;
}

.scene-meta {
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.scale-type {
  font-size: 20rpx;
  color: #94A7AE;
  background: rgba(148, 167, 174, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.mapping-count {
  font-size: 18rpx;
  color: #5A6B5F;
  opacity: 0.7;
  background: rgba(90, 107, 95, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.scene-arrow {
  margin-left: 16rpx;
  padding: 12rpx;
}

.arrow-icon {
  font-size: 28rpx;
  color: #94A7AE;
  opacity: 0.6;
  transition: all 0.3s ease;
}

.scene-item:active .arrow-icon {
  opacity: 1;
  transform: translateX(4rpx);
}

/* 使用指南 */
.usage-guide {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.guide-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
  margin-bottom: 24rpx;
  text-align: center;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.guide-step {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step-number {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #C0A9BD, #94A7AE);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(192, 169, 189, 0.3);
}

.step-text {
  font-size: 24rpx;
  color: #5A6B5F;
  line-height: 1.4;
}
