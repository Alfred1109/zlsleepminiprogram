<!-- pages/scene/list/list.wxml -->
<!-- 主题切换器 -->
<theme-switcher 
  show-theme-switcher="{{true}}" 
  page-type="default"
  bind:themechange="onThemeChange"
/>
<view class="container {{themeClass}}">
  <!-- 页面头部 -->
  <view class="page-header">
    <view class="header-content">
      <text class="page-title">疗愈场景</text>
      <text class="page-subtitle">选择适合您的疗愈场景</text>
    </view>
  </view>

  <!-- 场景列表 -->
  <view class="scene-list">
    <view class="scene-item" 
          wx:for="{{scenes}}" 
          wx:key="id"
          bindtap="onSceneTap"
          data-id="{{item.id}}"
          data-name="{{item.name}}"
          data-scale-type="{{item.scaleType}}"
          data-scene-name="{{item.sceneName}}">
      <view class="scene-icon-container">
        <text class="scene-icon">{{item.icon}}</text>
      </view>
      <view class="scene-info">
        <text class="scene-name">{{item.name}}</text>
        <text class="scene-description">{{item.description}}</text>
        <view class="scene-meta">
          <text class="scale-type" wx:if="{{item.scaleType}}">{{item.scaleType}} 量表</text>
          <text class="scale-type" wx:else>通用场景</text>
        </view>
      </view>
      <view class="scene-arrow">
        <text class="arrow-icon">→</text>
      </view>
    </view>
  </view>

  <!-- 使用提示 -->
  <view class="usage-guide">
    <view class="guide-title">💡 使用指南</view>
    <view class="guide-steps">
      <view class="guide-step">
        <text class="step-number">1</text>
        <text class="step-text">选择适合的疗愈场景</text>
      </view>
      <view class="guide-step">
        <text class="step-number">2</text>
        <text class="step-text">完成专业评测</text>
      </view>
      <view class="guide-step">
        <text class="step-number">3</text>
        <text class="step-text">生成个性化脑波</text>
      </view>
      <view class="guide-step">
        <text class="step-number">4</text>
        <text class="step-text">开始疗愈体验</text>
      </view>
    </view>
  </view>
</view>
