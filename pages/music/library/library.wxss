/* pages/music/library/library.wxss */
/* 音频库页面样式 */

/* 页面容器 - 使用主题背景，支持动态切换 */
.page-container {
  /* 背景由主题系统控制，移除硬编码颜色 */
  min-height: 1334rpx;
  transition: background 0.3s ease;
}

/* 页面头部样式 - 使用主题背景，支持动态切换 */
.page-header {
  position: relative;
  padding: 80rpx 24rpx 48rpx;
  text-align: center;
  margin-bottom: 32rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  transition: background 0.3s ease;
}

.page-header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 2;
  text-shadow: 0 2rpx 8rpx rgba(43, 186, 165, 0.3);
}

.page-header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  position: relative;
  z-index: 2;
  opacity: 0.95;
}

/* 标签页 */
.tab-container {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 8rpx;
  margin: 0 24rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  /* 背景由主题系统控制，移除硬编码颜色 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
  transition: background 0.3s ease;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #94A7AE;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #FFFFFF;
  font-weight: 600;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #FF6B6B;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 重复样式已在上方定义，此处删除 */

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(43, 186, 165, 0.3);
  border-top: 4rpx solid #C0A9BD;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #2c3e50;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 内容容器 */
.content-container {
  padding: 20rpx;
  min-height: 1034rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #2c3e50;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 40rpx;
}

.btn-primary {
  /* 背景由主题系统控制，移除硬编码颜色 */
  color: #ffffff;
  border: none;
  transition: background 0.3s ease;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 音频列表 */
.music-list, .sequence-list {
  display: flex;
  flex-direction: column;
  margin: 0 24rpx;
}

.music-item, .sequence-item {
  margin-bottom: 16rpx;
}

.music-item, .sequence-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.music-item:active, .sequence-item:active {
  transform: scale(0.97) translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(43, 186, 165, 0.25);
  background: rgba(255, 255, 255, 1);
}

/* 音频封面 */
.music-cover, .sequence-cover {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.play-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.music-item:active .play-overlay,
.sequence-item:active .play-overlay {
  opacity: 1;
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 播放指示器 */
.playing-indicator {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(74, 144, 226, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  /* gap removed for compatibility */
  /* gap: 6rpx; */
}

.wave {
  width: 4rpx;
  background: #ffffff;
  border-radius: 2rpx;
  animation: wave 1.5s ease-in-out infinite;
}

.wave1 { height: 16rpx; animation-delay: 0s; }
.wave2 { height: 24rpx; animation-delay: 0.3s; }
.wave3 { height: 20rpx; animation-delay: 0.6s; }

@keyframes wave {
  0%, 100% { transform: scaleY(1); }
  50% { transform: scaleY(1.5); }
}

/* 音频信息 */
.music-info, .sequence-info {
  flex: 1;
  margin-right: 20rpx;
}

.music-title, .sequence-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.music-subtitle {
  font-size: 24rpx;
  color: #C0A9BD;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.music-meta, .sequence-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.sequence-duration, .sequence-segments {
  margin-right: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  /* gap removed for compatibility */
  /* gap: 4rpx; */
}

.meta-icon {
  font-size: 20rpx;
}

.meta-text {
  font-size: 22rpx;
  color: #666;
}

.music-tags {
  display: flex;
  /* gap removed for compatibility */
  /* gap: 8rpx; */
  flex-wrap: wrap;
}

.music-tag {
  font-size: 20rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.music-tag.favorite {
  background: rgba(255, 107, 53, 0.1);
  color: #FF6B35;
}

.music-tag.featured {
  background: rgba(255, 139, 90, 0.15);
  color: #E5602F;
  border: 1rpx solid rgba(255, 107, 53, 0.2);
}

.sequence-description {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.music-date, .sequence-date {
  font-size: 22rpx;
  color: #999999;
}

/* 操作按钮 */
.music-actions, .sequence-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-width: 120rpx;
  padding: 10rpx;
}

/* 带文字的按钮样式 */
.action-btn-with-text {
  width: 100rpx;
  height: auto;
  padding: 12rpx 8rpx;
  border-radius: 12rpx;
  border: none;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin: 6rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 10;
}

.action-btn-with-text:active {
  transform: scale(0.95);
  background: rgba(43, 186, 165, 0.1);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}

.action-icon.active {
  opacity: 1;
}

.btn-text {
  font-size: 20rpx;
  color: #666666;
  line-height: 1;
  text-align: center;
}

.action-btn-with-text:active .btn-text {
  color: #C0A9BD;
}

/* 浮动操作按钮 */
.fab-container {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  z-index: 100;
}

.fab {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* 背景由主题系统控制，移除硬编码颜色 */
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.fab.secondary {
  /* 背景由主题系统控制，移除硬编码颜色 */
  box-shadow: 0 6rpx 20rpx rgba(255, 139, 90, 0.35);
  transition: background 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 订阅状态卡片 */
.subscription-status-card {
  margin: 0 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-icon-container {
  width: 80rpx;
  height: 80rpx;
  background: rgba(43, 186, 165, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.status-icon {
  font-size: 40rpx;
}

.status-info {
  flex: 1;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.status-expiry {
  font-size: 24rpx;
  color: #666;
}

.status-expiry.expired {
  color: #f56565;
}

.upgrade-btn {
  margin-left: 16rpx;
}

.btn-upgrade {
  /* 背景由主题系统控制，移除硬编码颜色 */
  color: white;
  border: none;
  transition: background 0.3s ease;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(43, 186, 165, 0.3);
}

.btn-upgrade:active {
  transform: scale(0.95);
}

.status-features {
  border-top: 1rpx solid rgba(43, 186, 165, 0.1);
  padding-top: 24rpx;
}

.features-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.features-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.feature-item {
  font-size: 24rpx;
  color: #C0A9BD;
  margin-right: 24rpx;
  margin-bottom: 8rpx;
}

/* 场景状态指示器 - 使用主题背景，支持动态切换 */
.scene-indicator {
  margin: 0 24rpx 32rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  overflow: hidden;
  transition: background 0.3s ease;
}

.scene-indicator-content {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
}

.scene-indicator-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.scene-indicator-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.scene-indicator-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
  line-height: 1.3;
}

.scene-indicator-subtitle {
  font-size: 24rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.scene-indicator-action {
  padding: 12rpx 20rpx;
  /* 背景和边框由主题系统控制，移除硬编码颜色 */
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.scene-indicator-action:active {
  transform: scale(0.95);
  /* 背景由主题系统控制，移除硬编码颜色 */
}

.exit-text {
  font-size: 24rpx;
  /* 颜色由主题系统控制，移除硬编码颜色 */
  font-weight: 500;
  transition: color 0.3s ease;
}

/* 标签页过滤提示 */
.tab-filter-hint {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 4rpx;
  opacity: 0.8;
}

/* 空状态多按钮布局 */
.empty-actions {
  display: flex;
  gap: 16rpx;
  width: 100%;
  margin-top: 24rpx;
}

.btn-secondary {
  flex: 1;
  padding: 16rpx 24rpx;
  background: rgba(192, 169, 189, 0.1);
  color: #C0A9BD;
  border: 1rpx solid rgba(192, 169, 189, 0.2);
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  transform: scale(0.95);
  background: rgba(192, 169, 189, 0.2);
}

.btn-primary {
  flex: 1;
  padding: 16rpx 24rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  color: #FFFFFF;
  border: none;
  border-radius: 24rpx;
  transition: background 0.3s ease;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(192, 169, 189, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(192, 169, 189, 0.4);
}
