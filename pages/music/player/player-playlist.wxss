/* 播放列表弹窗样式 */
.playlist-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.playlist-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.playlist-container {
  position: relative;
  width: 100%;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.playlist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.playlist-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.playlist-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  background: #f5f5f5;
  border-radius: 50%;
}

.playlist-content {
  padding: 0 30rpx 30rpx;
}

.playlist-scroll {
  max-height: 60vh;
}

.playlist-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
  transition: all 0.3s ease;
}

.playlist-item.current {
  background: rgba(43, 186, 165, 0.1);
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  border-bottom: none;
  margin-bottom: 8rpx;
}

.playlist-item:active {
  background: rgba(43, 186, 165, 0.05);
}

.playlist-item-cover {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.playlist-item-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.playlist-item-playing {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(43, 186, 165, 0.8);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.playing-icon {
  color: white;
  font-size: 24rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.playlist-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.playlist-item-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.playlist-item.current .playlist-item-title {
  color: #C0A9BD;
}

.playlist-item-subtitle {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.playlist-item-duration {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}
