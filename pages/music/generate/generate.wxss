/* pages/music/generate/generate.wxss */
/* 音乐生成页面样式 - 极简兼容版本 */

.page-container {
  min-height: 1334rpx;
  /* 背景由主题系统控制，移除硬编码颜色 */
  padding-bottom: 200rpx;
  transition: background 0.3s ease;
}

.page-content {
  padding: 32rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 48rpx 32rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  /* color: white; -- 使用主题适配文字颜色 */
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.header-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  /* color: #ffffff; -- 使用主题适配文字颜色 */
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  max-width: 600rpx;
  margin: 0 auto;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  /* color: #ffffff; -- 使用主题适配文字颜色 */
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  margin-right: 16rpx;
  margin-bottom: 0;
}

.loading-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 主要内容 */
.main-content {
  flex: 1;
}

/* 场景模式提示 */
.scene-mode-tip {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  border-left: 6rpx solid #C0A9BD;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 区块样式 */
.section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-title {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 8rpx;
}

.title-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* 内容区块 */
.content-section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.section-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 空状态 */
.empty-container {
  text-align: center;
  padding: 80rpx 32rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

/* 评测记录列表 */
.assessment-list {
  padding: 0 32rpx 32rpx;
}

.assessment-item {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.assessment-item.selected {
  background: rgba(192, 169, 189, 0.1);
  border-color: #C0A9BD;
}

.assessment-item.selected-multiple {
  background: rgba(192, 169, 189, 0.15);
  border-color: #C0A9BD;
  box-shadow: 0 2rpx 8rpx rgba(192, 169, 189, 0.2);
}

.assessment-item:last-child {
  margin-bottom: 0;
}

/* 选择指示器 */
.selection-indicator {
  margin-right: 24rpx;
  margin-top: 8rpx;
}

/* 单选 Radio 样式 */
.radio-indicator {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  transition: all 0.2s ease;
}

.radio-indicator.radio-checked {
  border-color: #C0A9BD;
}

.radio-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #C0A9BD;
}

/* 多选 Checkbox 样式 */
.checkbox-indicator {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  border: 3rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  transition: all 0.2s ease;
}

.checkbox-indicator.checkbox-checked {
  border-color: #C0A9BD;
  background: #C0A9BD;
}

.checkbox-icon {
  width: 20rpx;
  height: 20rpx;
}

/* 评测内容 */
.assessment-content {
  flex: 1;
}

.assessment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.assessment-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.assessment-time {
  font-size: 24rpx;
  color: #999999;
}

.assessment-result {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-score {
  font-size: 26rpx;
}

.score-label {
  color: #666666;
}

.score-value {
  color: #333333;
  font-weight: bold;
}

.result-level {
  font-size: 24rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.8);
}

/* 生成信息样式 */
.multiple-mode-info .selected-count {
  color: #C0A9BD;
  font-weight: 600;
}

/* 生成区域 */
.generate-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.generate-info {
  margin-bottom: 30rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.info-content {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* 按钮样式 */
.btn {
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: #C0A9BD;
  /* color: white; -- 使用主题适配文字颜色 */
  height: 96rpx;
}

.btn-block {
  width: 100%;
}

.btn-generate {
  background: #C0A9BD;
  /* color: #ffffff; -- 使用主题适配文字颜色 */
}

.btn-generate:disabled {
  background: #cccccc;
  color: #999999;
}

.btn-generate.generating {
  background: #cccccc;
}

.btn-loading {
  display: flex;
  align-items: center;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
}