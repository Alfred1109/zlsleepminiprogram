/* 可访问性测试页面样式 */
@import "../../styles/main.wxss";

.accessibility-test-container {
  padding: 40rpx;
  background: linear-gradient(135deg, #F9FAFB 0%, #F3F4F6 100%);
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.page-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #1F2937;
  display: block;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.5;
  display: block;
}

/* 控制面板 */
.control-panel {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.btn {
  flex: 1;
  min-width: 200rpx;
  padding: 24rpx 32rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.98);
}

.btn-secondary {
  background: #4B5563;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(75, 85, 99, 0.3);
}

.btn-outline {
  background: transparent;
  color: #4B5563;
  border: 2rpx solid #4B5563;
  box-shadow: none;
}

.btn-outline:active {
  background: rgba(75, 85, 99, 0.1);
}

/* 结果概览 */
.results-overview {
  margin-bottom: 40rpx;
}

.overview-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.overview-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 30rpx;
  display: block;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150rpx, 1fr));
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #F3F4F6;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.stat-item.success {
  background: rgba(5, 150, 105, 0.1);
  border-color: #059669;
}

.stat-item.error {
  background: rgba(220, 38, 38, 0.1);
  border-color: #DC2626;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2937;
  display: block;
  margin-bottom: 8rpx;
}

.stat-item.success .stat-number {
  color: #059669;
}

.stat-item.error .stat-number {
  color: #DC2626;
}

.stat-label {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
}

/* 进度条 */
.progress-container {
  margin-top: 30rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #4B5563;
  margin-bottom: 16rpx;
  display: block;
}

.progress-bar {
  height: 16rpx;
  background: #E5E7EB;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
}

.progress-fill.success { background: #059669; }
.progress-fill.warning { background: #D97706; }
.progress-fill.error { background: #DC2626; }

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 40rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4));
  animation: shimmer 2s infinite;
}

.progress-text {
  font-size: 26rpx;
  color: #4B5563;
  font-weight: 600;
  text-align: right;
  display: block;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

/* 详细结果 */
.detailed-results {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 30rpx;
  display: block;
}

.test-results-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.test-result-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #F3F4F6;
  transition: background-color 0.3s ease;
}

.test-result-item:last-child {
  border-bottom: none;
}

.test-result-item.failed {
  background: rgba(220, 38, 38, 0.02);
  border-left: 6rpx solid #DC2626;
}

.test-result-item.passed {
  border-left: 6rpx solid #059669;
}

.result-icon {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.icon {
  font-size: 36rpx;
  line-height: 1;
}

.result-info {
  flex: 1;
}

.test-description {
  font-size: 30rpx;
  font-weight: 500;
  color: #1F2937;
  margin-bottom: 16rpx;
  display: block;
}

.color-preview {
  margin-bottom: 16rpx;
}

.color-sample {
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  font-weight: 500;
  display: inline-block;
}

.test-metrics {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.metric {
  font-size: 26rpx;
  color: #4B5563;
  font-weight: 500;
}

.level-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  text-transform: uppercase;
}

.level-AAA { background: #059669; }
.level-AA { background: #D97706; }
.level-POOR { background: #DC2626; }
.level-FAIL { background: #DC2626; }

.recommendation {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.4;
  display: block;
}

/* 改进建议 */
.recommendations {
  margin-bottom: 40rpx;
}

.recommendations-list {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.recommendation-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.recommendation-item:last-child {
  margin-bottom: 0;
}

.recommendation-text {
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.5;
}

/* 自定义测试 */
.custom-test {
  margin-bottom: 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.custom-test-form {
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #4B5563;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.color-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #F9FAFB;
  transition: border-color 0.3s ease;
}

.color-input:focus {
  border-color: #FF6B35;
  outline: none;
}

/* 自定义测试结果 */
.custom-result {
  border-top: 2rpx solid #F3F4F6;
  padding-top: 30rpx;
  margin-top: 30rpx;
}

.custom-preview {
  margin-bottom: 20rpx;
}

.custom-sample {
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.custom-metrics {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.custom-ratio,
.custom-level,
.custom-recommendation {
  font-size: 28rpx;
  line-height: 1.4;
}

.custom-ratio {
  font-weight: 600;
  color: #1F2937;
}

.custom-level {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: white;
  font-weight: 600;
  text-transform: uppercase;
  align-self: flex-start;
}

.custom-recommendation {
  color: #4B5563;
}

/* WCAG标准说明 */
.wcag-standards {
  margin-bottom: 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.standards-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.standard-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #F9FAFB;
}

.standard-level {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: white;
  margin-right: 20rpx;
  text-transform: uppercase;
}

.standard-info {
  flex: 1;
}

.standard-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 6rpx;
  display: block;
}

.standard-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.4;
  display: block;
}

/* 色彩心理学说明 */
.color-theory {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.theory-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.theory-card {
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
}

.theory-card:hover {
  border-color: #FF6B35;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 53, 0.15);
}

.theory-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 12rpx;
  display: block;
}

.theory-desc {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.5;
  display: block;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .control-panel {
    flex-direction: column;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .test-metrics {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}
