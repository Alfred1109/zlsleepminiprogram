/* pages/profile/profile.wxss */
/* 个人页面样式 - 页面特有样式，全局样式通过app.wxss导入 */

/* 个人资料头部 - 使用主题背景，支持动态切换 */
.profile-header {
  /* 背景由主题系统控制，移除硬编码颜色 */
  color: var(--text-primary, #1F2937); /* 使用主题变量，默认深灰色 */
  padding: 50rpx 24rpx 30rpx;
  position: relative;
  transition: background 0.3s ease;
}

.user-main-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  z-index: 2;
  position: relative;
  gap: 20rpx;
}
.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

/* 头像选择按钮样式 */
.avatar-btn {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  border: none;
  background: transparent;
  border-radius: 50%;
  overflow: hidden;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  background-color: #f0f0f0;
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  /* color: #FFFFFF; -- 使用主题适配文字颜色 */
  padding: 6rpx 0;
  text-align: center;
  font-size: 20rpx;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}

.avatar-tip {
  font-size: 20rpx;
  /* color: #FFFFFF; -- 使用主题适配文字颜色 */
}

.user-detail {
  margin-left: 24rpx;
  flex: 1;
}

/* 昵称行布局 */
.nickname-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

/* 昵称输入容器 */
.nickname-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.nickname-input {
  font-size: 28rpx;
  font-weight: 500;
  /* color: #FFFFFF; -- 使用主题适配文字颜色 */
  background: rgba(255, 255, 255, 0.15);
  border-radius: 8rpx;
  padding: 10rpx 16rpx;
  margin-bottom: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  width: 100%;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  /* color: #FFFFFF; -- 使用主题适配文字颜色 */
}

.login-actions {
  margin-top: 12rpx;
}

/* 原有VIP样式保留用于兼容 */
.user-status {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.status-badge {
  display: inline-block;
}

.vip-tag {
  background: linear-gradient(135deg, #FF6B35, #FF8B5A) !important;
  color: white !important;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.25);
  min-height: 48rpx;
  justify-content: center;
}

.vip-tag.premium {
  background: linear-gradient(135deg, #E5602F, #FF6B35) !important;
  box-shadow: 0 3rpx 15rpx rgba(229, 96, 47, 0.4);
}

.vip-icon {
  margin-right: 6rpx;
  font-size: 18rpx;
}

.register-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.quick-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start;
  z-index: 2;
  position: relative;
  min-height: 80rpx;
  margin-top: 8rpx;
}

.login-button-container {
  display: flex;
  align-items: center;
}

/* 内联退出按钮 */
.logout-btn-inline {
  flex-shrink: 0;
}

.logout-btn-inline .btn-mini {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  min-height: 36rpx;
  min-width: 60rpx;
}

/* 保存操作区域 */
.save-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.btn-medium {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  border-radius: 24rpx;
  min-width: 100rpx;
}

.btn-mini {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  min-width: 80rpx;
  min-height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
}

/* 自定义保存进度条样式 */
.saving-progress-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 0 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.progress-bar-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar-bg {
  width: 60rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 2rpx;
  position: relative;
  overflow: hidden;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.progress-bar-fill {
  height: 100%;
  background: #FFFFFF;
  border-radius: 2rpx;
  transition: width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  box-shadow: none;
}

.progress-bar-glow {
  position: absolute;
  top: -1rpx;
  right: -2rpx;
  width: 8rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 0 6rpx rgba(255, 255, 255, 0.8);
  animation: progress-glow 1s ease-in-out infinite alternate;
}

.progress-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
  margin-left: 2rpx;
}

@keyframes progress-glow {
  0% {
    opacity: 0.6;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* 页面内容区域 */
.page-content {
  padding-bottom: 180rpx;
}

/* 数据统计样式 */
.stats-container {
  display: flex;
  flex-direction: column;
  margin: 0 24rpx;
  /* gap: 20rpx; removed for compatibility */
}

/* 内联会员状态样式 - 重新设计布局 */
.subscription-detail-inline {
  margin-top: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.12);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  position: relative;
  overflow: visible;
}

/* VIP页签样式 */
.vip-badge-corner {
  position: absolute;
  top: -1rpx;
  right: 20rpx;
  z-index: 10;
}

.vip-tag-corner {
  background: linear-gradient(135deg, #FF6B35, #FF8B5A) !important;
  color: white !important;
  padding: 8rpx 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  position: relative;
  border-radius: 0 0 8rpx 8rpx;
  box-shadow: 
    0 4rpx 8rpx rgba(255, 107, 53, 0.25),
    0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-top: none;
}

.vip-text {
  font-size: 20rpx;
  font-weight: 600;
  color: white;
  line-height: 1.2;
  white-space: nowrap;
}

.vip-icon-corner {
  font-size: 18rpx;
  line-height: 1;
  color: white;
  white-space: nowrap;
}

.subscription-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.subscription-status-info {
  flex: 1;
}

.subscription-expiry-text {
  font-size: 26rpx;
  color: #1F2937; /* 深色文字提升对比度 */
  font-weight: 500;
  line-height: 1.3;
}

.subscription-expiry-text.expired {
  color: #ff7875;
}

.subscription-upgrade-btn {
  margin-left: 20rpx;
}

.btn-upgrade {
  background: #FF8B5A; /* 实色按钮，文字白色可读 */
  color: white !important;
  border: none;
  border-radius: 18rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 80rpx;
  box-shadow: 0 4rpx 12rpx rgba(229, 96, 47, 0.25);
}

.btn-upgrade:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.3);
}

.subscription-features {
  border-top: 1rpx solid rgba(255, 255, 255, 0.15);
  padding-top: 18rpx;
}

.features-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.feature-tag {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 14rpx;
  padding: 6rpx 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  min-width: 0;
  flex-shrink: 0;
}

.feature-check {
  width: 16rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.25);
  color: white !important;
  border-radius: 50%;
  font-size: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  font-weight: 600;
  line-height: 1;
}

.feature-name {
  font-size: 22rpx;
  color: #1F2937; /* 深色功能文本 */
  font-weight: 500;
  white-space: nowrap;
}

.stats-row {
  display: flex;
  margin-bottom: 20rpx;
  /* gap: 20rpx; removed for compatibility */
}

.stats-row:last-child {
  margin-bottom: 0;
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(192, 169, 189, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  min-height: 120rpx;
}

.stat-card:last-child {
  margin-right: 0;
}

.stat-card:active {
  transform: scale(0.97) translateY(-2rpx);
  box-shadow: 0 16rpx 48rpx rgba(192, 169, 189, 0.25);
  background: rgba(255, 255, 255, 1);
}

.stat-icon {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.stat-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF6B35;
  margin-bottom: 4rpx;
}

.stat-number.secondary {
  color: #C0A9BD;
}

.stat-number.highlight {
  color: #E5602F;
  background: linear-gradient(135deg, #FF6B35, #FF8B5A);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
}

.stat-action {
  font-size: 20rpx;
  color: #4A90E2;
  background: rgba(74, 144, 226, 0.1);
  padding: 0 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(74, 144, 226, 0.2);
  white-space: nowrap;
  text-align: center;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 100%;
  margin-left: 8rpx;
  flex-shrink: 0;
}

/* 内容区域 */
.content-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary, #1F2937); /* 使用主题变量，默认深灰色 */
}

.list-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin: 0 24rpx 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(192, 169, 189, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: rgba(192, 169, 189, 0.05);
  transform: scale(0.98);
}

.list-item-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.list-item-subtitle {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.list-item-action {
  font-size: 24rpx;
  color: #C0A9BD;
  margin-left: 16rpx;
}

/* 订阅状态详细卡片 */
.subscription-detail-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(192, 169, 189, 0.1);
}

.subscription-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.subscription-icon-container {
  width: 100rpx;
  height: 100rpx;
  background: rgba(192, 169, 189, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.subscription-icon {
  font-size: 48rpx;
}

.subscription-info {
  flex: 1;
}

.subscription-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subscription-expiry {
  font-size: 26rpx;
  color: #666;
}

.subscription-expiry.expired {
  color: #f56565;
}

.subscription-action {
  margin-left: 16rpx;
}

.btn-subscription-upgrade {
  background: #C0A9BD;
  color: white !important; /* 按钮保持白色，因背景是深色 */
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

.btn-subscription-upgrade:active {
  transform: scale(0.95);
}

.subscription-benefits {
  border-top: 1rpx solid rgba(192, 169, 189, 0.1);
  padding-top: 32rpx;
}

.benefits-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.benefits-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.benefit-icon {
  width: 32rpx;
  height: 32rpx;
  background: #C0A9BD;
  color: white !important; /* 小微章保持白色，因背景是深色 */
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.benefit-text {
  font-size: 26rpx;
  color: #333;
}
