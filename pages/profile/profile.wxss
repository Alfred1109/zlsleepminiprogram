/* pages/profile/profile.wxss */
/* 个人页面样式 - 页面特有样式，全局样式通过app.wxss导入 */

/* 个人资料头部 */
.profile-header {
  background: linear-gradient(135deg, #C0A9BD 0%, #94A7AE 100%);
  color: #FFFFFF;
  padding: 50rpx 30rpx 30rpx;
  position: relative;
}

.user-main-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 2;
  position: relative;
}
.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

/* 头像选择按钮样式 */
.avatar-btn {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  border: none;
  background: transparent;
  border-radius: 50%;
  overflow: hidden;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  background-color: #f0f0f0;
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 6rpx 0;
  text-align: center;
  font-size: 20rpx;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}

.avatar-tip {
  font-size: 20rpx;
  color: white;
}

.user-detail {
  margin-left: 24rpx;
  flex: 1;
}

/* 昵称输入容器 */
.nickname-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.nickname-input {
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 8rpx;
  padding: 10rpx 16rpx;
  margin-bottom: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  width: 100%;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: white;
}

.login-actions {
  margin-top: 12rpx;
}

.user-status {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.status-badge {
  display: inline-block;
}

.vip-tag {
  background: rgba(255, 255, 255, 0.9) !important;
  color: #333;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.vip-icon {
  margin-right: 6rpx;
  font-size: 20rpx;
}

.register-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.quick-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  z-index: 2;
  position: relative;
  min-height: 80rpx;
}

.login-button-container {
  display: flex;
  align-items: center;
}

.action-buttons-container {
  display: flex;
  align-items: center;
  height: 100%;
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-medium {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  border-radius: 24rpx;
  min-width: 100rpx;
}

.btn-mini {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  min-width: 80rpx;
}

/* 自定义保存进度条样式 */
.saving-progress-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 0 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.progress-bar-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar-bg {
  width: 60rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 2rpx;
  position: relative;
  overflow: hidden;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
  border-radius: 2rpx;
  transition: width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  box-shadow: 0 0 4rpx rgba(255, 255, 255, 0.6);
}

.progress-bar-glow {
  position: absolute;
  top: -1rpx;
  right: -2rpx;
  width: 8rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 0 6rpx rgba(255, 255, 255, 0.8);
  animation: progress-glow 1s ease-in-out infinite alternate;
}

.progress-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
  margin-left: 2rpx;
}

@keyframes progress-glow {
  0% {
    opacity: 0.6;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* 数据统计样式 */
.stats-container {
  display: flex;
  flex-direction: column;
  /* gap: 20rpx; removed for compatibility */
}

.stats-row {
  display: flex;
  /* gap: 20rpx; removed for compatibility */
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(192, 169, 189, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.stat-card:active {
  transform: scale(0.97) translateY(-2rpx);
  box-shadow: 0 16rpx 48rpx rgba(192, 169, 189, 0.25);
  background: rgba(255, 255, 255, 1);
}

.stat-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, rgba(192, 169, 189, 0.1) 0%, rgba(147, 211, 174, 0.15) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.stat-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #C0A9BD;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
}

/* 内容区域 */
.content-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.list-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin: 0 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(192, 169, 189, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: rgba(192, 169, 189, 0.05);
  transform: scale(0.98);
}

.list-item-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.list-item-subtitle {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.list-item-action {
  font-size: 24rpx;
  color: #C0A9BD;
  margin-left: 16rpx;
}

/* 订阅状态详细卡片 */
.subscription-detail-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(192, 169, 189, 0.1);
}

.subscription-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.subscription-icon-container {
  width: 100rpx;
  height: 100rpx;
  background: rgba(192, 169, 189, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.subscription-icon {
  font-size: 48rpx;
}

.subscription-info {
  flex: 1;
}

.subscription-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subscription-expiry {
  font-size: 26rpx;
  color: #666;
}

.subscription-expiry.expired {
  color: #f56565;
}

.subscription-action {
  margin-left: 16rpx;
}

.btn-subscription-upgrade {
  background: linear-gradient(135deg, #C0A9BD, #94A7AE);
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 20rpx rgba(192, 169, 189, 0.3);
}

.btn-subscription-upgrade:active {
  transform: scale(0.95);
}

.subscription-benefits {
  border-top: 1rpx solid rgba(192, 169, 189, 0.1);
  padding-top: 32rpx;
}

.benefits-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.benefits-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.benefit-icon {
  width: 32rpx;
  height: 32rpx;
  background: #C0A9BD;
  color: white;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.benefit-text {
  font-size: 26rpx;
  color: #333;
}
