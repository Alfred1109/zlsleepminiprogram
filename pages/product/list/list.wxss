/* 商品列表页面样式 */

.container {
  min-height: 100vh;
  background-color: #F4F2F3;
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  background: #F8F6F7;
  border-radius: 50rpx;
  padding: 0 80rpx 0 50rpx;
  margin-right: 20rpx;
}

.search-input {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #333;
}

.search-icon, .clear-icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.search-icon {
  left: 20rpx;
}

.clear-icon {
  right: 20rpx;
}

.filter-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  padding: 10rpx;
}

.filter-btn .iconfont {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

/* 分类标签 */
.category-tabs {
  background: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  white-space: nowrap;
}

.category-tab {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin: 0 12rpx;
  background: #F8F6F7;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
}

.category-tab.active {
  background: #FF6B35;
  color: white;
}

.category-tab:first-child {
  margin-left: 24rpx;
}

.category-tab:last-child {
  margin-right: 24rpx;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.sort-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: #666;
  position: relative;
  transition: all 0.2s ease;
}

.sort-item.active {
  color: #FF6B35;
  font-weight: 500;
}

.sort-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #FF6B35;
  border-radius: 2rpx;
}

/* 商品列表 */
.product-list {
  padding: 0 24rpx;
  margin-top: 20rpx;
}

.product-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.product-item:active {
  transform: scale(0.98);
}

.product-image-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-tags {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.product-tag {
  background: rgba(255, 107, 53, 0.9);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.product-info {
  padding: 24rpx;
}

.product-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.product-price-wrapper {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.product-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF6B35;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.product-actions {
  display: flex;
  gap: 12rpx;
}

.add-cart-btn {
  width: 60rpx;
  height: 60rpx;
  background: #FF6B35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.add-cart-btn:active {
  transform: scale(0.9);
}

.product-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #666;
  gap: 12rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
}

/* 筛选面板 */
.filter-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-overlay.show {
  opacity: 1;
  visibility: visible;
}

.filter-panel {
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-overlay.show .filter-panel {
  transform: translateY(0);
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.filter-content {
  padding: 40rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.price-range {
  padding: 0 20rpx;
}

.price-slider {
  width: 100%;
  margin-bottom: 20rpx;
}

.price-range-display {
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-actions .btn {
  flex: 1;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 搜索建议样式 */
.search-suggestions {
  background: white;
  border: 1rpx solid #f0f0f0;
  border-top: none;
  max-height: 400rpx;
  overflow-y: auto;
  position: relative;
  z-index: 10;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f8f8f8;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item .iconfont {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.suggestion-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.suggestion-item:active {
  background-color: #f8f8f8;
}

/* 搜索历史和热门搜索样式 */
.search-history-panel {
  background: white;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.history-section, .hot-search-section {
  margin-bottom: 40rpx;
}

.history-section:last-child, .hot-search-section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  font-size: 28rpx;
  color: #FF6B35;
  padding: 8rpx 16rpx;
}

.history-tags, .hot-search-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag, .hot-search-tag {
  background: #F8F6F7;
  color: #666;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  border: 1rpx solid #f0f0f0;
}

.hot-search-tag {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8A65 100%);
  color: white;
  border: none;
}

.history-tag:active, .hot-search-tag:active {
  transform: scale(0.95);
  transition: transform 0.1s;
}

/* 改进的按钮样式 */
.btn {
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  margin: 0 8rpx;
}

.btn-secondary {
  background: #F8F6F7;
  color: #666;
}

.btn-primary {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8A65 100%);
  color: white;
}

.btn:active {
  transform: scale(0.95);
  transition: transform 0.1s;
}
