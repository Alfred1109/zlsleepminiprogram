<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-input-wrapper">
      <input 
        class="search-input" 
        placeholder="搜索商品..." 
        value="{{searchKeyword}}"
        bindinput="onSearchInput"
        bindconfirm="onSearchConfirm"
      />
      <view class="search-icon" bindtap="onSearchConfirm">
        <text class="iconfont icon-search"></text>
      </view>
      <view wx:if="{{searchKeyword}}" class="clear-icon" bindtap="onSearchClear">
        <text class="iconfont icon-close"></text>
      </view>
    </view>
    <view class="filter-btn" bindtap="toggleFilter">
      <text class="iconfont icon-filter"></text>
      <text>筛选</text>
    </view>
  </view>

  <!-- 分类标签 -->
  <scroll-view class="category-tabs" scroll-x enable-flex>
    <view 
      class="category-tab {{selectedCategory === item.id ? 'active' : ''}}"
      wx:for="{{categories}}" 
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="onCategoryChange"
    >
      {{item.name}}
    </view>
  </scroll-view>

  <!-- 搜索建议 -->
  <view wx:if="{{showSearchSuggestions}}" class="search-suggestions">
    <view 
      class="suggestion-item"
      wx:for="{{searchSuggestions}}"
      wx:key="*this"
      data-keyword="{{item}}"
      bindtap="onSearchSuggestionTap"
    >
      <text class="iconfont icon-search"></text>
      <text class="suggestion-text">{{item}}</text>
    </view>
  </view>

  <!-- 搜索历史和热门搜索 -->
  <view wx:if="{{!searchKeyword && (searchHistory.length > 0 || hotSearchKeywords.length > 0)}}" class="search-history-panel">
    <!-- 搜索历史 -->
    <view wx:if="{{searchHistory.length > 0}}" class="history-section">
      <view class="section-header">
        <text class="section-title">搜索历史</text>
        <text class="clear-btn" bindtap="clearSearchHistory">清除</text>
      </view>
      <view class="history-tags">
        <view 
          class="history-tag"
          wx:for="{{searchHistory}}"
          wx:key="*this"
          data-keyword="{{item}}"
          bindtap="onSearchHistoryTap"
        >
          {{item}}
        </view>
      </view>
    </view>

    <!-- 热门搜索 -->
    <view wx:if="{{hotSearchKeywords.length > 0}}" class="hot-search-section">
      <view class="section-header">
        <text class="section-title">热门搜索</text>
      </view>
      <view class="hot-search-tags">
        <view 
          class="hot-search-tag"
          wx:for="{{hotSearchKeywords}}"
          wx:key="*this"
          data-keyword="{{item}}"
          bindtap="onHotSearchTap"
        >
          {{item}}
        </view>
      </view>
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="product-list">
    <view 
      class="product-item" 
      wx:for="{{productList}}" 
      wx:key="id"
      data-id="{{item.id}}"
      data-index="{{index}}"
      bindtap="goToProductDetail"
    >
      <view class="product-image-wrapper">
        <image 
          class="product-image" 
          src="{{item.image_url || item.images && item.images.length ? item.images[0] : '/images/default-image.png'}}" 
          mode="aspectFill"
          lazy-load
        />
        <view wx:if="{{item.tags && item.tags.length}}" class="product-tags">
          <text class="product-tag" wx:for="{{item.tags}}" wx:for-item="tag" wx:key="*this">{{tag}}</text>
        </view>
      </view>
      
      <view class="product-info">
        <view class="product-title">{{item.name}}</view>
        <view class="product-description">{{item.description}}</view>
        
        <view class="product-bottom">
          <view class="product-price-wrapper">
            <text class="product-price">¥{{item.displayPrice}}</text>
            <text wx:if="{{item.displayOriginalPrice}}" class="original-price">¥{{item.displayOriginalPrice}}</text>
          </view>
          
          <view class="product-actions">
            <view 
              class="add-cart-btn" 
              data-id="{{item.id}}"
              catchtap="addToCart"
            >
              <text class="iconfont icon-cart-plus"></text>
            </view>
          </view>
        </view>
        
        <view class="product-meta">
          <text class="sales-count">已售 {{item.sales_count || item.salesCount || 0}}</text>
          <text class="stock-count">库存 {{item.stock_quantity || item.stock || 0}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-wrapper">
    <view class="loading-spinner"></view>
    <text class="loading-text">加载中...</text>
  </view>

  <!-- 加载更多 -->
  <view wx:if="{{loadingMore}}" class="loading-more">
    <view class="loading-spinner small"></view>
    <text>加载更多...</text>
  </view>

  <!-- 无更多数据 -->
  <view wx:if="{{!hasMore && productList.length > 0}}" class="no-more">
    <text>没有更多商品了</text>
  </view>

  <!-- 空状态 -->
  <view wx:if="{{!loading && productList.length === 0 && searchKeyword}}" class="empty-state">
    <image class="empty-image" src="/images/empty-music.svg" />
    <text class="empty-text">没有找到"{{searchKeyword}}"相关商品</text>
    <view class="empty-actions">
      <button class="btn btn-secondary" bindtap="onSearchClear">清除搜索</button>
      <button class="btn btn-primary" bindtap="resetFilter">重置筛选</button>
    </view>
  </view>
  
  <view wx:if="{{!loading && productList.length === 0 && !searchKeyword}}" class="empty-state">
    <image class="empty-image" src="/images/empty-music.svg" />
    <text class="empty-text">暂无商品</text>
    <view class="empty-actions">
      <button class="btn btn-primary" bindtap="resetFilter">重置筛选</button>
    </view>
  </view>
</view>

<!-- 筛选面板 -->
<view class="filter-overlay {{showFilter ? 'show' : ''}}" bindtap="toggleFilter">
  <view class="filter-panel" catchtap="">
    <view class="filter-header">
      <text class="filter-title">筛选</text>
      <view class="filter-close" bindtap="toggleFilter">
        <text class="iconfont icon-close"></text>
      </view>
    </view>
    
    <view class="filter-content">
      <!-- 价格区间 -->
      <view class="filter-section">
        <text class="filter-section-title">价格区间</text>
        <view class="price-range">
          <slider 
            class="price-slider" 
            min="0" 
            max="10000" 
            step="100"
            value="{{priceRange[1]}}" 
            bindchange="onPriceRangeChange"
            activeColor="#FF6B35"
          />
          <view class="price-range-display">
            <text>¥{{priceRange[0]}} - ¥{{priceRange[1]}}</text>
          </view>
        </view>
      </view>
    </view>
    
    <view class="filter-actions">
      <button class="btn btn-secondary" bindtap="resetFilter">重置</button>
      <button class="btn btn-primary" bindtap="applyFilter">应用</button>
    </view>
  </view>
</view>
