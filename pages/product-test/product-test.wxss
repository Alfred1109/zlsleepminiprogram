/* 商品API测试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.test-button {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  color: #666;
  background-color: white;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.test-button.primary {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: white;
}

.test-button:disabled {
  opacity: 0.6;
}

.navigation-buttons {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.nav-button {
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.result-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-button {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background-color: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.action-button:disabled {
  opacity: 0.5;
}

.results-container {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.results-header {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-bottom: 2rpx solid #e0e0e0;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.results-scroll {
  height: 400rpx;
  padding: 20rpx 30rpx;
}

.result-item {
  margin-bottom: 15rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  border-left: 6rpx solid #ff6b35;
}

.result-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  font-family: 'Courier New', monospace;
}

.empty-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 28rpx;
  opacity: 0.8;
}

.product-preview {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.preview-header {
  padding: 20rpx 30rpx;
  background-color: #f0f8ff;
  border-bottom: 2rpx solid #e0e0e0;
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.product-price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.product-category {
  font-size: 26rpx;
  color: #666;
}

.product-stock {
  font-size: 24rpx;
  color: #999;
}

.tips {
  background-color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.tip-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
}

.tip-text::before {
  content: '• ';
  color: #ff6b35;
  font-weight: bold;
  margin-right: 10rpx;
}
