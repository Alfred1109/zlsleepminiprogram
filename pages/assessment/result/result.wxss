/* pages/assessment/result/result.wxss */
/* 全新现代化评测结果页面样式 */
@import "/styles/main.wxss";

:root {
  --primary-color: #2BBAA5;
  --secondary-color: #93D3AE;
  --background-color: #f7f9fc;
  --card-background: #ffffff;
  --text-primary: #1f2937;
  --text-secondary: #6b7280;
  --border-color: #e5e7eb;
  --shadow: 0 10rpx 30rpx -10rpx rgba(0, 0, 0, 0.08);
  --border-radius: 24rpx;
  --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.page-container {
  background-color: var(--background-color);
  font-family: var(--font-family);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.page-content {
  padding: 0 32rpx;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  color: var(--text-secondary);
}
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
}
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 结果头部 */
.result-header-new {
  position: relative;
  background: linear-gradient(135deg, #e0f2f1, #e6fffa); /* Lighter gradient */
  color: var(--text-primary); /* Dark text for high contrast */
  padding: 120rpx 40rpx 60rpx;
  margin: 0 -32rpx 40rpx;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  text-align: center;
  overflow: hidden;
}
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 8s ease-in-out infinite;
}
.decoration-1 {
  width: 200rpx;
  height: 200rpx;
  top: -80rpx;
  left: -50rpx;
  animation-duration: 10s;
}
.decoration-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -60rpx;
  right: -40rpx;
  animation-duration: 12s;
  animation-delay: -3s;
}
.decoration-3 {
  width: 80rpx;
  height: 80rpx;
  top: 40%;
  right: 20%;
  animation-duration: 8s;
}
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}
.success-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
  animation: pop-in 0.5s ease-out;
}
.header-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}
.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}
.completion-badge {
  position: absolute;
  bottom: -24rpx;
  left: 50%;
  transform: translateX(-50%);
  background: white;
  color: var(--primary-color);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
@keyframes pop-in {
  from {
    transform: scale(0.5);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 通用卡片样式 */
.result-overview-card,
.analysis-report-card,
.recommendations-card,
.healing-plan-card,
.healing-schedule-card,
.actions-section,
.tips-section-new {
  background: var(--card-background);
  border-radius: var(--border-radius);
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: var(--shadow);
  animation: fadeInUp 0.5s ease-out forwards;
  opacity: 0;
}
.analysis-report-card { animation-delay: 0.1s; }
.recommendations-card { animation-delay: 0.2s; }
.healing-plan-card { animation-delay: 0.3s; }
/* ... and so on for other cards */

.card-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 32rpx;
}
.title-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

/* 评测概览 */
.result-overview-card {
  padding-top: 48rpx; /* for completion badge overlap */
}
.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.scale-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}
.scale-type {
  font-size: 26rpx;
  color: var(--text-secondary);
}
.score-visualization {
  display: flex;
  align-items: center;
  gap: 32rpx;
}
.score-chart {
  position: relative;
  width: 220rpx;
  height: 220rpx;
}
.score-circle-new {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(var(--primary-color) 0% 75%, var(--border-color) 75% 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}
.score-inner {
  width: 180rpx;
  height: 180rpx;
  background: var(--card-background);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.score-number {
  font-size: 64rpx;
  font-weight: 700;
  color: var(--primary-color);
}
.score-total {
  font-size: 28rpx;
  color: var(--text-secondary);
}
.score-analysis {
  flex: 1;
}
.severity-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600; /* Bolder font */
  display: inline-block;
  margin-bottom: 16rpx;
  border: 1px solid rgba(0,0,0,0.05);
}
/* New high-contrast colors */
.severity-normal { background: #a7f3d0; color: #047857; }
.severity-mild { background: #fde68a; color: #a16207; }
.severity-moderate { background: #fed7aa; color: #b45309; }
.severity-severe { background: #fecaca; color: #b91c1c; }

.severity-description {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 8rpx;
}
.score-percentile {
  font-size: 26rpx;
  color: #4b5563; /* Darker secondary text */
}

/* 详细分析报告 */
.dimensions-analysis {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}
.dimension-item {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}
.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.dimension-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}
.dimension-score {
  font-size: 26rpx;
  color: var(--text-secondary);
}
.dimension-bar {
  height: 16rpx;
  background-color: var(--border-color);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--secondary-color), var(--primary-color));
  border-radius: 8rpx;
}
.dimension-level {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: right;
}
.professional-interpretation {
  padding: 24rpx;
  background: linear-gradient(135deg, #f0fdfa, #f5f3ff);
  border-radius: 16rpx;
}
.interpretation-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}
.interpretation-content {
  font-size: 26rpx;
  line-height: 1.7;
  color: var(--text-secondary);
}

/* 个性化建议 */
.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.recommendation-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}
.recommendation-icon {
  font-size: 48rpx;
  margin-top: 8rpx;
}
.recommendation-content {
  flex: 1;
}
.recommendation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}
.recommendation-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}
.recommendation-priority {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}
.priority-high { background: #fef2f2; color: #dc2626; }
.priority-medium { background: #fffbeb; color: #b45309; } /* Darker text */
.priority-low { background: #eff6ff; color: #3b82f6; }

/* 专属疗愈音乐方案 */
.plan-description {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}
.music-options-new {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.option-card-new {
  position: relative;
  padding: 32rpx;
  border-radius: 20rpx;
  overflow: hidden;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 400rpx;
  border: 1px solid rgba(255,255,255,0.3);
}
.quick-option {
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
}
.deep-option {
  background: linear-gradient(135deg, #059669, #34d399);
}
.option-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.option-icon {
  font-size: 48rpx;
}
.option-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.option-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 24rpx 0 16rpx;
}
.option-description {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
}
.option-features {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  opacity: 0.8;
}
.option-action {
  margin-top: 32rpx;
}
.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: transform 0.2s ease;
}
.action-button:active {
  transform: scale(0.98);
}
.quick-btn { color: #4f46e5; }
.deep-btn { color: #059669; }
.btn-arrow {
  margin-left: 16rpx;
  font-weight: 600;
}
.generating-status {
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}
.generating-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255,255,255,0.5);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

/* 建议疗愈计划 */
.schedule-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.schedule-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}
.schedule-time {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-secondary);
}
.schedule-activity {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.activity-icon {
  font-size: 40rpx;
}
.activity-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}
.activity-duration {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 操作按钮区域 */
.actions-section {
  padding: 0;
  background: transparent;
  box-shadow: none;
}
.primary-actions, .additional-actions {
  display: flex;
  gap: 24rpx;
}
.primary-actions {
  margin-bottom: 24rpx;
}
.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  background-color: transparent;
}
.btn-icon {
  margin-right: 12rpx;
}
.primary-btn {
  background: var(--primary-color);
  color: white;
}
.secondary-btn {
  background: #e0f2f1;
  color: #0d9488; /* Darker shade for better contrast */
}
.outline-btn {
  border: 1px solid var(--border-color);
  color: var(--text-secondary);
}

/* 温馨提示 */
.tips-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.tips-icon {
  font-size: 32rpx;
}
.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}
.tips-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}
.tip-category-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}
.tip-item {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.7;
  padding-left: 20rpx;
  position: relative;
}
.tip-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: var(--primary-color);
}
.disclaimer {
  padding: 24rpx;
  background: #fffbeb; /* Consistent with medium priority */
  border-radius: 16rpx;
  border-left: 4rpx solid #f59e0b;
}
.disclaimer .tip-category-title { color: #b45309; }
.disclaimer .tip-item { color: #78350f; }
.disclaimer .tip-item::before { color: #f59e0b; }

/* 生成中遮罩 */
.generating-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.generating-content {
  text-align: center;
  color: white;
}
.generating-title {
  font-size: 36rpx;
  font-weight: 500;
  margin: 24rpx 0 16rpx;
}
.generating-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}