/* pages/assessment/scales/scales.wxss */
/* 评测量表选择页面样式 - 全局样式通过 app.wxss 导入，无需重复导入 */

/* 页面容器 - 使用统一的主色调背景 */
.page-container {
  background-color: #C0A9BD;
  min-height: 1334rpx;
}

/* 页面头部样式 */
.page-header {
  position: relative;
  padding: 80rpx 24rpx 48rpx;
  text-align: center;
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 2;
  text-shadow: 0 2rpx 8rpx rgba(43, 186, 165, 0.3);
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  position: relative;
  z-index: 2;
  opacity: 0.95;
}

/* 页面内容区域 */
.page-content {
  padding: 0 0 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  margin: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(43, 186, 165, 0.3);
  border-top: 4rpx solid #C0A9BD;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #2c3e50;
  font-size: 28rpx;
}

/* 量表列表 */
.scales-container {
  margin-bottom: 40rpx;
}

/* 统一的区块标题样式 */
.content-section {
  margin-bottom: 40rpx;
}

.section-header {
  margin: 0 24rpx 20rpx;
  position: relative;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}/* 列表容器统一样式 */
.scales-container, .info-section {
  margin: 0 24rpx;
}

.scales-list {
  display: flex;
  flex-direction: column;
  /* gap: 20rpx; removed for compatibility */
}

.list-container {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
}

.scale-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: transparent;
  border: none;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.list-container:active {
  transform: scale(0.97) translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(43, 186, 165, 0.25);
  background: rgba(255, 255, 255, 1);
}

.scale-card:active {
  background: rgba(43, 186, 165, 0.05);
}

.scale-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.scale-content {
  flex: 1;
}

.scale-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.scale-type {
  font-size: 24rpx;
  color: #C0A9BD;
  margin-bottom: 12rpx;
}

.scale-description {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.scale-meta {
  display: flex;
  /* gap: 30rpx; removed for compatibility */
}

.scale-time,
.scale-questions {
  font-size: 24rpx;
  color: #999;
}

.scale-arrow {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 最近评测 */
.recent-section {
  margin: 0 24rpx 40rpx;
}

.section-action {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.section-action:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.recent-list {
  display: flex;
  flex-direction: column;
  /* gap: 15rpx; removed for compatibility */
}

.recent-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(43, 186, 165, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.recent-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
}

.recent-icon {
  margin-right: 25rpx;
}

.recent-scale-icon {
  font-size: 40rpx;
}

.recent-content {
  flex: 1;
}

.recent-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.recent-score {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.recent-time {
  font-size: 22rpx;
  color: #999;
}

.recent-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
  text-align: center;
}

.status-normal {
  background-color: #5D9E7E;
}

.status-mild {
  background-color: #FFB347;
}

.status-moderate {
  background-color: #FF6B6B;
}

.status-severe {
  background-color: #DC143C;
}

/* 评测说明 - 已在统一样式中定义外边距 */

.info-card {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  /* gap: 12rpx; removed for compatibility */
}

.info-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}


