/* pages/assessment/scales/scales.wxss */
/* 评测量表选择页面样式 - 全局样式通过 app.wxss 导入，无需重复导入 */

/* 页面容器 - 使用主题背景，支持动态切换 */
.page-container {
  /* 背景由主题系统控制，移除硬编码颜色 */
  min-height: 1334rpx;
  transition: background 0.3s ease;
}

/* 页面头部样式 */
.page-header {
  position: relative;
  padding: 80rpx 24rpx 48rpx;
  text-align: center;
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 2;
  text-shadow: 0 2rpx 8rpx rgba(43, 186, 165, 0.3);
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  position: relative;
  z-index: 2;
  opacity: 0.95;
}

/* 页面内容区域 */
.page-content {
  padding: 0 0 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  margin: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(43, 186, 165, 0.3);
  border-top: 4rpx solid #C0A9BD;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #2c3e50;
  font-size: 28rpx;
}

/* 量表列表 */
.scales-container {
  margin-bottom: 40rpx;
}

/* 统一的区块标题样式 */
.content-section {
  margin-bottom: 40rpx;
}

.section-header {
  margin: 0 24rpx 20rpx;
  position: relative;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}/* 列表容器统一样式 */
.scales-container, .info-section {
  margin: 0 24rpx;
}

.scales-list {
  display: flex;
  flex-direction: column;
  /* gap: 20rpx; removed for compatibility */
}

.list-container {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
}

.scale-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: transparent;
  border: none;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.list-container:active {
  transform: scale(0.97) translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(43, 186, 165, 0.25);
  background: rgba(255, 255, 255, 1);
}

.scale-card:active {
  background: rgba(43, 186, 165, 0.05);
}

.scale-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.scale-content {
  flex: 1;
}

.scale-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.scale-type {
  font-size: 24rpx;
  color: #C0A9BD;
  margin-bottom: 12rpx;
}

.scale-description {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.scale-meta {
  display: flex;
  /* gap: 30rpx; removed for compatibility */
}

.scale-time,
.scale-questions {
  font-size: 24rpx;
  color: #999;
}

.scale-arrow {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 最近评测 */
.recent-section {
  margin: 0 24rpx 40rpx;
}

.section-action {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.section-action:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.recent-list {
  display: flex;
  flex-direction: column;
  /* gap: 15rpx; removed for compatibility */
}

.recent-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(43, 186, 165, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.recent-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
}

.recent-icon {
  margin-right: 25rpx;
}

.recent-scale-icon {
  font-size: 40rpx;
}

.recent-content {
  flex: 1;
}

.recent-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.recent-score {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.recent-time {
  font-size: 22rpx;
  color: #999;
}

.recent-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #FFFFFF;
  text-align: center;
}

.status-normal {
  background-color: #5D9E7E;
}

.status-mild {
  background-color: #FFB347;
}

.status-moderate {
  background-color: #FF6B6B;
}

.status-severe {
  background-color: #DC143C;
}

/* 评测说明 - 已在统一样式中定义外边距 */

.info-card {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  /* gap: 12rpx; removed for compatibility */
}

.info-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 场景状态指示器 */
.scene-indicator {
  margin: 0 24rpx 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.9));
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  overflow: hidden;
}

.scene-indicator-content {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
}

.scene-indicator-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.scene-indicator-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.scene-indicator-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
  line-height: 1.3;
}

.scene-indicator-subtitle {
  font-size: 24rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.scene-indicator-action {
  padding: 12rpx 20rpx;
  background: rgba(192, 169, 189, 0.1);
  border: 1rpx solid rgba(192, 169, 189, 0.2);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.scene-indicator-action:active {
  transform: scale(0.95);
  background: rgba(192, 169, 189, 0.2);
}

.exit-text {
  font-size: 24rpx;
  color: #C0A9BD;
  font-weight: 500;
}

/* 区块子标题 */
.section-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 8rpx;
  opacity: 0.9;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  margin: 0 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3A36;
  margin-bottom: 12rpx;
  text-align: center;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #94A7AE;
  text-align: center;
  line-height: 1.4;
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.empty-action {
  width: 100%;
  display: flex;
  justify-content: center;
}

.empty-button {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #C0A9BD, #94A7AE);
  color: #FFFFFF;
  border: none;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(192, 169, 189, 0.3);
  transition: all 0.3s ease;
}

.empty-button:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(192, 169, 189, 0.4);
}

/* 列表项统一样式调整 */
.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: transparent;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: rgba(192, 169, 189, 0.05);
  transform: scale(0.995);
}

.list-item-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  opacity: 0.8;
}

.list-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.list-item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3A36;
  line-height: 1.3;
}

.list-item-subtitle {
  font-size: 24rpx;
  color: #C0A9BD;
  opacity: 0.8;
}

.card-content {
  font-size: 26rpx;
  color: #64766A;
  line-height: 1.4;
  margin: 8rpx 0;
}

.list-item-meta {
  font-size: 22rpx;
  color: #94A7AE;
  opacity: 0.7;
}

.list-item-action {
  padding: 8rpx;
  opacity: 0.6;
}

/* 趋势图样式 */
.trend-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 0 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
  overflow: hidden;
}

.trend-overview {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.trend-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.trend-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A90E2;
}

.stat-label {
  font-size: 22rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.simple-chart {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.chart-title {
  font-size: 24rpx;
  color: #64766A;
  font-weight: 500;
  margin-bottom: 20rpx;
  text-align: center;
}

.chart-container {
  position: relative;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  margin: 0 16rpx;
}

.chart-grid {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.grid-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 1rpx;
  background: rgba(0, 0, 0, 0.1);
}

.chart-line {
  position: relative;
  width: 100%;
  height: 100%;
}

.trend-point {
  position: absolute;
  transform: translate(-50%, 50%);
}

.point-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4A90E2;
  border: 2rpx solid #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.point-dot.latest {
  width: 16rpx;
  height: 16rpx;
  background: #FF6B6B;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.point-label {
  position: absolute;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #2D3A36;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  white-space: nowrap;
}

.trend-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.line-svg {
  width: 100%;
  height: 100%;
}

.chart-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  padding: 0 16rpx;
}

.label-left,
.label-right {
  font-size: 20rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.latest-result {
  padding: 32rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
}

.result-date {
  font-size: 22rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.result-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.result-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A90E2 0%, #5BA3F2 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
}

.score-number {
  font-size: 24rpx;
  font-weight: 600;
}

.score-unit {
  font-size: 16rpx;
  opacity: 0.8;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.result-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #2D3A36;
}

.result-status {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 调整卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 0 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.12);
}


