/* pages/assessment/history/history.wxss */
.container {
  padding: 24rpx 24rpx 200rpx;
  min-height: 100vh;
  position: relative;
  transition: background 0.3s ease;
}

/* 添加背景纹理 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 20% 20%, rgba(74, 144, 226, 0.03) 0%, transparent 50%),
                    radial-gradient(circle at 80% 80%, rgba(148, 167, 174, 0.03) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

/* 统计信息头部 */
.stats-header {
  margin-bottom: 32rpx;
}

.stats-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #4A90E2;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.stat-label {
  font-size: 24rpx;
  color: #5A6B5F;
  opacity: 0.8;
  font-weight: 500;
}

/* 筛选和排序控制 */
.filter-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.filter-section,
.sort-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-title,
.sort-title {
  font-size: 24rpx;
  color: #2D3A36;
  font-weight: 600;
}

.filter-options,
.sort-options {
  display: flex;
  gap: 8rpx;
}

.filter-option,
.sort-option {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.6);
  color: #64766A;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
}

.filter-option.active,
.sort-option.active {
  background: #4A90E2;
  color: #FFFFFF;
  border-color: #4A90E2;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

/* 登录提示 */
.login-prompt {
  margin-bottom: 32rpx;
}

.prompt-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.prompt-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  opacity: 0.8;
}

.prompt-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.prompt-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
}

.prompt-desc {
  font-size: 24rpx;
  color: #5A6B5F;
  opacity: 0.8;
  line-height: 1.4;
}

.prompt-action {
  margin-left: 20rpx;
}

.login-btn {
  padding: 16rpx 32rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.4);
}

/* 评测历史内容 */
.history-content {
  flex: 1;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 24rpx;
  color: #94A7AE;
  opacity: 0.8;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3A36;
}

.item-date {
  font-size: 22rpx;
  color: #94A7AE;
  opacity: 0.8;
}

.item-status {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.item-status.completed {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.item-status.pending {
  background: rgba(255, 152, 0, 0.2);
  color: #FF9800;
}

.item-body {
  padding: 24rpx 32rpx;
}

.score-display {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.score-circle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A90E2 0%, #5BA3F2 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
}

.score-number {
  font-size: 28rpx;
  font-weight: 600;
}

.score-unit {
  font-size: 18rpx;
  opacity: 0.8;
}

.score-label {
  flex: 1;
}

.result-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3A36;
}

.item-description {
  margin-top: 16rpx;
}

.description-text {
  font-size: 24rpx;
  color: #5A6B5F;
  line-height: 1.5;
  opacity: 0.8;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 0 32rpx 24rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: #4A90E2;
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.8);
  color: #2D3A36;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.action-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #64766A;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 22rpx;
  color: #94A7AE;
  opacity: 0.8;
  line-height: 1.4;
  margin-bottom: 32rpx;
}

.empty-action {
  margin-top: 24rpx;
}

.start-assessment-btn {
  padding: 16rpx 32rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.start-assessment-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.4);
}

/* 快速操作 */
.quick-actions {
  position: fixed;
  bottom: calc(220rpx + env(safe-area-inset-bottom));
  right: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 10;
}

.quick-action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.quick-action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}

.action-text {
  font-size: 24rpx;
  color: #2D3A36;
  font-weight: 500;
}
