/* pages/assessment/questions/questions.wxss */
/* 评测答题页面样式 - 全局样式通过 app.wxss 导入，无需重复导入 */

/* 页面容器使用统一样式，在layout.wxss中已定义 */
.page-container {
  background: linear-gradient(135deg, #2BBAA5 0%, #93D3AE 100%);
  display: flex;
  flex-direction: column;
  min-height: 1334rpx;
}

/* 进度条 */
.progress-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.progress-bar {
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #2BBAA5 0%, #93D3AE 100%);
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 26rpx;
  color: #6b7280;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(43, 186, 165, 0.3);
  border-top: 4rpx solid #2BBAA5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #2c3e50;
  font-size: 28rpx;
}

/* 题目容器 */
.question-container {
  flex: 1;
  padding: 30rpx;
}

.question-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 题目标题 */
.question-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.question-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #2BBAA5;
  margin-bottom: 10rpx;
}

.scale-name {
  font-size: 24rpx;
  color: #6b7280;
}

/* 题目文本 */
.question-text {
  font-size: 32rpx;
  color: #2c3e50;
  line-height: 1.6;
  margin-bottom: 40rpx;
  text-align: center;
  font-weight: 500;
}

/* 选项容器 */
.options-container {
  margin-bottom: 50rpx;
}

.option-item {
  display: flex;
  align-items: flex-start;
  padding: 25rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.option-item:last-child {
  margin-bottom: 0;
}

.option-item.selected {
  background: rgba(43, 186, 165, 0.1);
  border-color: #2BBAA5;
}

.option-item:active {
  transform: scale(0.98);
}

.option-radio {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.option-item.selected .option-radio {
  border-color: #2BBAA5;
  background-color: #2BBAA5;
}

.option-checked {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.option-content {
  flex: 1;
}

.option-text {
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 5rpx;
}

.option-description {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.3;
}

/* 导航按钮 */
.navigation-container {
  display: flex;
  justify-content: space-between;
  /* gap: 20rpx; removed for compatibility */
}

.nav-button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.prev-button {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.prev-button:active {
  background: rgba(255, 255, 255, 0.15);
}

.next-button {
  background: linear-gradient(135deg, #2BBAA5 0%, #93D3AE 100%);
  color: white;
}

.next-button:active {
  transform: scale(0.98);
}

.next-button.disabled {
  background: #ccc;
  color: #999;
}

/* 提交状态覆盖层 */
.submitting-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.submitting-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.submitting-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #2BBAA5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.submitting-text {
  font-size: 28rpx;
  color: #2c3e50;
}

/* 退出按钮 */
.exit-container {
  padding: 30rpx;
  text-align: center;
}

.exit-button {
  background: transparent;
  color: #999;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
}


