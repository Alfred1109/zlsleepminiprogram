/* API测试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.test-button {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  color: #666;
  background-color: white;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.test-button.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.test-button:disabled {
  opacity: 0.6;
}

.result-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-button {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background-color: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.action-button:disabled {
  opacity: 0.5;
}

.results-container {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.results-header {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-bottom: 2rpx solid #e0e0e0;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.results-scroll {
  height: 500rpx;
  padding: 20rpx 30rpx;
}

.result-item {
  margin-bottom: 15rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  border-left: 6rpx solid #4facfe;
}

.result-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  font-family: 'Courier New', monospace;
}

.empty-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 28rpx;
  opacity: 0.8;
}

.tips {
  background-color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.tip-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
}

.tip-text::before {
  content: '• ';
  color: #4facfe;
  font-weight: bold;
  margin-right: 10rpx;
}
