  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.guide-card:active {
  transform: scale(0.98) translateY(-2rpx);
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx rgba(0, 0, 0, 0.08);
