  align-items: center;
  justify-content: center;
}

.music-type-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
  color: white;
  font-weight: bold;
}

