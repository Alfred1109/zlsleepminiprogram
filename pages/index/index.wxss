  color: #4B5563;
  line-height: 1.4;
}

.tag-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.tag-text {
  font-size: 20rpx;
  color: #64766A;
  line-height: 1;
}

/* 脑波封面 */
.music-cover {
  position: relative;
  width: 100%;
  height: 120rpx;
  background-color: #C0A9BD;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.music-type-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
  color: white;
  font-weight: bold;
}

.music-type-badge.user-generated {
  background: rgba(255, 193, 7, 0.9);
}

.music-type-badge.system-music {
  background: rgba(108, 117, 125, 0.9);
}

.play-overlay {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-overlay .play-icon {
  font-size: 20rpx;
  color: #C0A9BD;
  margin: 0;
}

/* 脑波信息 */
.music-info {
  display: flex;
  flex-direction: column;
  /* gap: 6rpx; removed for compatibility */
}

.music-title {
  font-size: 26rpx;
  color: #64766A;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-shadow: none;
}

.music-category {
  font-size: 22rpx;
  color: #94A7AE;
  font-weight: 500;
}

.music-duration {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 400;
}