/* 商品数据调试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 30rpx;
  background-color: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.action-btn.primary {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: white;
  border: none;
}

.results-container {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.results-header {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-bottom: 2rpx solid #e0e0e0;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.results-scroll {
  height: 400rpx;
  padding: 20rpx 30rpx;
}

.result-item {
  margin-bottom: 15rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  border-left: 6rpx solid #e74c3c;
}

.result-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  font-family: 'Courier New', monospace;
}

.empty-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
}

.data-preview {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.preview-header {
  padding: 20rpx 30rpx;
  background-color: #e8f4fd;
  border-bottom: 2rpx solid #e0e0e0;
}

.preview-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.data-content {
  padding: 20rpx 30rpx;
}

.data-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.mock-product {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.mock-product:last-child {
  border-bottom: none;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.product-price {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: bold;
}
