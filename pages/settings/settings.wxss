/* pages/settings/settings.wxss */
@import "/styles/main.wxss";

.container {
  background: linear-gradient(135deg, #2BBAA5 0%, #93D3AE 100%);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 页面头部 */
.page-header {
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 设置内容 */
.settings-content {
  flex: 1;
  height: calc(100vh - 140rpx);
}

/* 设置区块 */
.setting-section {
  margin: 0 30rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(43, 186, 165, 0.15);
}

.section-header {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f8f8f8;
  transition: background-color 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: rgba(43, 186, 165, 0.05);
}

.setting-label {
  flex: 1;
  margin-right: 20rpx;
}

.label-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.label-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.setting-value {
  display: flex;
  align-items: center;
  color: #666;
}

.current-value {
  font-size: 26rpx;
  color: #2BBAA5;
  margin-right: 8rpx;
  display: flex;
  align-items: center;
}

.value-icon {
  margin-right: 6rpx;
}

.arrow-icon {
  font-size: 28rpx;
  color: #ccc;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.setting-control {
  display: flex;
  align-items: center;
}

/* 滑块样式 */
.volume-slider, .time-slider {
  width: 200rpx;
  margin-right: 16rpx;
}

.volume-text {
  font-size: 24rpx;
  color: #666;
  min-width: 50rpx;
  text-align: right;
}

/* 缓存信息特殊样式 */
.cache-info {
  flex-direction: column;
  align-items: flex-start;
}

.cache-progress {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #2BBAA5, #93D3AE);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.clear-cache-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 16rpx;
  border: none;
  min-width: auto;
  line-height: 1;
}

.clear-cache-btn:active {
  background: #e0e0e0;
}

/* 操作区域 */
.action-section {
  margin: 0 30rpx 32rpx;
}

.reset-btn {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  color: #ff4444;
  border: 1rpx solid rgba(255, 68, 68, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.reset-btn:active {
  background: rgba(255, 68, 68, 0.1);
}

/* 保存按钮 */
.save-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 20rpx 30rpx;
  border-top: 1rpx solid rgba(43, 186, 165, 0.1);
  z-index: 100;
}

.save-btn {
  width: 100%;
  background: linear-gradient(135deg, #2BBAA5, #93D3AE);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(43, 186, 165, 0.3);
}

.save-btn:active {
  transform: scale(0.98);
}

.save-btn[loading] {
  opacity: 0.8;
}

/* 选择器弹窗 */
.selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.selector-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.selector-container {
  position: relative;
  width: 100%;
  max-height: 70vh;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.selector-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.selector-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  background: #f5f5f5;
  border-radius: 50%;
}

.selector-content {
  padding: 0 30rpx 30rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.selector-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
  transition: background-color 0.3s ease;
}

.selector-item:last-child {
  border-bottom: none;
}

.selector-item:active {
  background-color: rgba(43, 186, 165, 0.05);
}

.selector-item.selected {
  background-color: rgba(43, 186, 165, 0.1);
  border-radius: 12rpx;
  margin: 8rpx 0;
  padding: 20rpx 16rpx;
  border-bottom: none;
}

.item-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

.item-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.selector-item.selected .item-label {
  color: #2BBAA5;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.check-icon {
  color: #2BBAA5;
  font-size: 28rpx;
  font-weight: bold;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}

/* 开关组件样式优化 */
switch {
  transform: scale(0.8);
}

/* 滑块组件样式优化 */
slider {
  margin: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .setting-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .setting-label {
    margin-right: 0;
    margin-bottom: 16rpx;
  }
  
  .setting-control, .setting-value {
    width: 100%;
    justify-content: flex-end;
  }
  
  .volume-slider, .time-slider {
    width: 100%;
    margin-right: 0;
    margin-bottom: 8rpx;
  }
}

/* 深色主题支持 */
@media (prefers-color-scheme: dark) {
  .setting-section {
    background: rgba(40, 40, 40, 0.95);
  }
  
  .section-title {
    color: #ffffff;
  }
  
  .label-text {
    color: #ffffff;
  }
  
  .label-desc {
    color: #cccccc;
  }
  
  .setting-item {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .selector-container {
    background: #2a2a2a;
  }
  
  .selector-title {
    color: #ffffff;
  }
}
